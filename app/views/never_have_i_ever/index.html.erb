    <%= link_to root_path, class: "inline-flex items-center gap-2 text-white/40 hover:text-white transition-colors text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Volver a Fun-able
    <% end %>
  </div>

  <style>
    /* Neon pink title styling */
    .neon-pink-title {
      color: #fff;
      text-shadow:
        0 0 4px #fff,
        0 0 10px #ec4899,
        0 0 25px rgba(236, 72, 153, 0.7),
        0 0 50px rgba(236, 72, 153, 0.4);
      animation: neon-title-flicker 4s infinite;
    }

    .neon-flicker-delayed {
      animation: neon-title-flicker 4s infinite 0.3s;
    }

    @keyframes neon-title-flicker {
      0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
        opacity: 1;
      }
      20%, 24%, 55% {
        opacity: 0.92;
      }
      22% {
        opacity: 0.88;
      }
    }

    @keyframes float {
      0%, 100% { transform: translateX(-50%) translateY(0); }
      50% { transform: translateX(-50%) translateY(-8px); }
    }
    .animate-float {
      animation: float 3s ease-in-out infinite;
    }

    /* Drink animation */
    @keyframes drink-shake {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-15deg); }
      75% { transform: rotate(15deg); }
    }
    .drink-animation {
      animation: drink-shake 0.5s ease-in-out;
    }
  </style>
</div>
