<div class="min-h-screen -mt-16 pt-16 relative overflow-hidden flex items-center justify-center px-4 py-12">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/20 md:bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[600px] md:h-[600px] bg-cyan-500/15 md:bg-cyan-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[400px] md:h-[400px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <h1 class="font-black tracking-tighter leading-none text-4xl md:text-5xl mb-2">
        <span class="neon-pink">Fun</span><span class="neon-dash">-</span><span class="neon-pink neon-flicker-delayed">able</span>
      </h1>
      <p class="text-white/40 text-sm">Bienvenido de vuelta</p>
    </div>

    <!-- Form Card -->
    <div class="rounded-2xl p-6 md:p-8"
         style="background: linear-gradient(145deg, rgba(15, 15, 20, 0.95) 0%, rgba(10, 10, 15, 0.98) 100%);
                border: 1px solid rgba(6, 182, 212, 0.15);
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);">

      <h2 class="text-xl font-semibold text-white text-center mb-6"><%= t('nav.login') %></h2>

      <%= form_with url: session_path, method: :post, class: "space-y-5" do |f| %>
        <!-- Email -->
        <div>
          <label class="flex items-center gap-2 text-sm font-medium text-white/70 mb-2">
            <svg class="w-4 h-4 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <%= t('user.email') %>
          </label>
          <%= f.email_field :email,
              class: "w-full px-4 py-3.5 rounded-xl text-white placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-pink-500/40 transition-all",
              style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(236, 72, 153, 0.2);",
              required: true,
              autofocus: true,
              autocomplete: "email",
              placeholder: "tu@email.com" %>
        </div>

        <!-- Password -->
        <div>
          <label class="flex items-center gap-2 text-sm font-medium text-white/70 mb-2">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <%= t('user.password') %>
          </label>
          <%= f.password_field :password,
              class: "w-full px-4 py-3.5 rounded-xl text-white placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-purple-500/40 transition-all",
              style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);",
              required: true,
              autocomplete: "current-password",
              placeholder: "••••••••" %>
        </div>

        <!-- Submit Button -->
        <%= f.submit t('nav.login'),
            class: "w-full py-4 rounded-xl font-bold text-white text-lg transition-all duration-300 active:scale-[0.98] hover:scale-[1.01] mt-2",
            style: "background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 30px rgba(236, 72, 153, 0.4);" %>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-white/10"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 text-white/30" style="background: linear-gradient(145deg, rgba(15, 15, 20, 0.95) 0%, rgba(10, 10, 15, 0.98) 100%);">o</span>
        </div>
      </div>

      <!-- Guest Play Button -->
      <%= button_to create_guest_session_path, class: "w-full py-4 rounded-xl font-semibold text-white transition-all duration-300 active:scale-[0.98] hover:scale-[1.01] flex items-center justify-center gap-3", style: "background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 25px rgba(6, 182, 212, 0.3);" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <%= t('home.play_as_guest') %>
      <% end %>

      <!-- Register Link -->
      <div class="text-center mt-6">
        <p class="text-white/40 text-sm mb-3">No tienes cuenta?</p>
        <%= link_to new_registration_path,
            class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl font-medium text-pink-400 transition-all duration-300 hover:bg-pink-500/10",
            style: "border: 1px solid rgba(236, 72, 153, 0.3);" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          Crear cuenta
        <% end %>
      </div>
    </div>
  </div>
</div>
