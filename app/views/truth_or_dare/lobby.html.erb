<div class="min-h-screen -mt-16 pt-16 pb-24 lg:pb-6 relative overflow-hidden" data-controller="truth-or-dare-lobby" data-truth-or-dare-lobby-game-id-value="<%= @game.id %>">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[400px] md:h-[400px] bg-cyan-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[300px] md:h-[300px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 max-w-5xl mx-auto px-4 lg:px-6 py-6 lg:py-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-6">

      <!-- Left Column: Game Code & Share -->
      <div class="lg:col-span-4 mb-6 lg:mb-0">
        <div class="text-center lg:text-left">
          <!-- Title -->
          <div class="lg:hidden mb-4">
            <h1 class="font-black tracking-tighter leading-none text-2xl">
              <span class="text-cyan-400">Verdad</span>
              <span class="text-white/60 mx-1">o</span>
              <span class="text-pink-400">Reto</span>
            </h1>
            <p class="mt-1 text-sm text-white/50">Sala de espera</p>
          </div>

          <!-- Game Code Card -->
          <div class="inline-block lg:block cursor-pointer group active:scale-[0.98] transition-transform"
               data-action="click->truth-or-dare-lobby#copyCode"
               data-truth-or-dare-lobby-target="code">
            <div class="px-6 py-4 lg:px-5 lg:py-4 rounded-xl transition-all duration-300"
                 style="background: rgba(10, 10, 15, 0.9);
                        border: 2px solid rgba(168, 85, 247, 0.4);
                        box-shadow: 0 0 25px rgba(168, 85, 247, 0.2);">
              <p class="text-[10px] uppercase tracking-widest text-purple-400/80 mb-2">Codigo de partida</p>
              <span class="font-mono text-3xl lg:text-4xl tracking-[0.25em] font-black block"
                    data-truth-or-dare-lobby-target="codeValue"
                    style="color: #c084fc; text-shadow: 0 0 15px rgba(168, 85, 247, 0.6);">
                <%= @game.code %>
              </span>
            </div>
          </div>

          <p class="text-xs mt-2 text-white/40" data-truth-or-dare-lobby-target="copyFeedback">Toca para copiar</p>

          <!-- Share Button -->
          <button type="button"
                  data-action="click->truth-or-dare-lobby#shareGame"
                  class="mt-3 inline-flex items-center gap-2 px-5 py-2.5 rounded-lg font-semibold text-white text-sm transition-all duration-300 active:scale-95 hover:scale-[1.02]"
                  style="background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
                         box-shadow: 0 0 20px rgba(168, 85, 247, 0.3);">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
            Invitar
          </button>

          <!-- Intensity Badge -->
          <div class="mt-4 inline-flex items-center gap-2 px-3 py-1.5 rounded-full"
               style="background: <%= @game.intensity_mild? ? 'rgba(34, 197, 94, 0.1)' : @game.intensity_medium? ? 'rgba(234, 179, 8, 0.1)' : 'rgba(239, 68, 68, 0.1)' %>;
                      border: 1px solid <%= @game.intensity_mild? ? 'rgba(34, 197, 94, 0.3)' : @game.intensity_medium? ? 'rgba(234, 179, 8, 0.3)' : 'rgba(239, 68, 68, 0.3)' %>;">
            <span><%= @game.intensity_mild? ? 'ðŸ˜‡' : @game.intensity_medium? ? 'ðŸ˜ˆ' : 'ðŸ”¥' %></span>
            <span class="text-xs font-medium <%= @game.intensity_mild? ? 'text-green-400' : @game.intensity_medium? ? 'text-yellow-400' : 'text-red-400' %>">
              <%= @game.intensity_mild? ? 'Suave' : @game.intensity_medium? ? 'Medio' : 'Picante' %>
            </span>
          </div>

          <!-- Leave button -->
          <div class="hidden lg:block mt-4 pt-4 border-t border-white/5">
            <%= button_to truth_or_dare_leave_path(@game),
                method: :post,
                class: "w-full flex items-center justify-center gap-2 px-4 py-2.5 rounded-lg text-sm font-medium transition-all duration-300 text-white/40 hover:text-red-400 border border-white/10 hover:border-red-500/30",
                data: { turbo_confirm: "Seguro que quieres abandonar?" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Salir
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column: Players + Start Button -->
      <div class="lg:col-span-8 space-y-4">
        <!-- Players Section -->
        <div class="rounded-xl p-4"
             style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(255, 255, 255, 0.05);">
          <h2 class="text-sm font-medium mb-3 flex items-center justify-between">
            <span class="flex items-center gap-2">
              <span class="text-white/80">Jugadores</span>
              <span class="text-purple-400/80 text-xs">(<span data-truth-or-dare-lobby-target="playerCount"><%= @game.player_count %></span>/<%= @game.max_players %>)</span>
            </span>
            <% if @game.player_count < 2 %>
              <span class="flex items-center gap-2 text-xs text-white/40">
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 animate-pulse"></span>
                Minimo 2 jugadores
              </span>
            <% else %>
              <span class="flex items-center gap-2 text-xs text-green-400">
                <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                Listo!
              </span>
            <% end %>
          </h2>

          <!-- Player Grid -->
          <div class="grid grid-cols-4 sm:grid-cols-5 lg:grid-cols-6 gap-2" data-truth-or-dare-lobby-target="playersList">
            <% @players.each do |player| %>
              <div class="aspect-square rounded-lg flex flex-col items-center justify-center p-2 relative group"
                   style="background: linear-gradient(145deg, rgba(168, 85, 247, 0.1) 0%, rgba(168, 85, 247, 0.05) 100%);
                          border: 1px solid rgba(168, 85, 247, 0.3);">
                <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white mb-1"
                     style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);">
                  <%= player.avatar_initials %>
                </div>
                <span class="text-[10px] text-white/70 truncate w-full text-center"><%= player.display_name %></span>
                <% if player.host? %>
                  <span class="absolute top-1 right-1 text-xs">ðŸ‘‘</span>
                <% end %>

                <% if @game.host?(current_user) && player.user_id != current_user.id %>
                  <%= button_to truth_or_dare_kick_path(@game, player_id: player.id),
                      method: :post,
                      class: "absolute -top-1 -right-1 w-5 h-5 rounded-full bg-red-500/80 text-white text-xs opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center",
                      data: { turbo_confirm: "Expulsar a #{player.display_name}?" } do %>
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% end %>

            <!-- Empty slots -->
            <% (@game.max_players - @game.player_count).clamp(0, 4).times do |i| %>
              <div class="aspect-square rounded-lg flex flex-col items-center justify-center p-1 lobby-empty-slot"
                   style="background: rgba(15, 15, 15, 0.5); border: 1px dashed rgba(168, 85, 247, 0.2); animation-delay: <%= i * 0.15 %>s;">
                <div class="w-8 h-8 rounded-full flex items-center justify-center mb-1 lobby-empty-slot-icon"
                     style="background: rgba(168, 85, 247, 0.1);">
                  <svg class="w-4 h-4 text-purple-400/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                </div>
                <span class="text-[10px] text-white/20">...</span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Settings Section (Host only) -->
        <% if @game.host?(current_user) %>
          <div class="rounded-xl p-4"
               style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(255, 255, 255, 0.05);">
            <h3 class="text-sm font-medium text-white/80 mb-3 flex items-center gap-2">
              <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Configuracion
            </h3>
            <%= form_with model: @game, url: truth_or_dare_update_settings_path(@game), method: :patch, class: "flex flex-wrap items-end gap-3" do |f| %>
              <div class="flex-1 min-w-[120px]">
                <label class="text-[10px] text-white/40 uppercase tracking-wide mb-1 block">Intensidad</label>
                <%= f.select :intensity_level, [['ðŸ˜‡ Suave', 'mild'], ['ðŸ˜ˆ Medio', 'medium'], ['ðŸ”¥ Picante', 'spicy']],
                    { selected: @game.intensity_level },
                    class: "w-full px-3 py-2 rounded-lg text-white text-sm appearance-none cursor-pointer",
                    style: "background: rgba(0, 0, 0, 0.5); border: 1px solid rgba(168, 85, 247, 0.3);" %>
              </div>
              <div class="w-20">
                <label class="text-[10px] text-white/40 uppercase tracking-wide mb-1 block">Max</label>
                <%= f.number_field :max_players, value: @game.max_players, min: 2, max: 20,
                    class: "w-full px-2 py-2 rounded-lg text-white text-center text-sm font-bold focus:outline-none",
                    style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
              </div>
              <%= f.submit "Guardar", class: "px-4 py-2 rounded-lg text-sm font-medium text-white/60 hover:text-white transition-all cursor-pointer", style: "background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.1);" %>
            <% end %>
          </div>
        <% end %>

        <!-- Desktop Start Button -->
        <div class="hidden lg:block">
          <% if @game.host?(current_user) %>
            <%= button_to "Iniciar Juego",
                truth_or_dare_start_path(@game),
                method: :post,
                class: "w-full py-4 rounded-xl font-bold text-lg text-white transition-all duration-300 hover:scale-[1.01] disabled:opacity-40 disabled:cursor-not-allowed disabled:hover:scale-100",
                style: @game.can_start? ? "background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); box-shadow: 0 0 30px rgba(168, 85, 247, 0.4);" : "background: rgba(60, 60, 60, 0.5);",
                disabled: !@game.can_start?,
                data: { turbo_confirm: "Iniciar el juego?" } %>
          <% else %>
            <div class="text-center py-3 rounded-xl"
                 style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(168, 85, 247, 0.15);">
              <div class="flex items-center justify-center gap-2">
                <span class="w-2 h-2 rounded-full bg-purple-400 animate-pulse"></span>
                <span class="text-purple-400/80 text-sm">Esperando que el anfitrion inicie...</span>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Mobile Leave button -->
        <div class="lg:hidden">
          <%= button_to truth_or_dare_leave_path(@game),
              method: :post,
              class: "w-full flex items-center justify-center gap-2 px-4 py-3 rounded-xl font-medium transition-all text-white/40 active:scale-[0.98] border border-white/10",
              data: { turbo_confirm: "Seguro que quieres abandonar?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Salir
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Fixed Bottom Start Button - Mobile only -->
  <div class="fixed bottom-0 left-0 right-0 p-4 lg:hidden z-50"
       style="background: linear-gradient(to top, rgba(5, 5, 10, 0.98) 0%, rgba(5, 5, 10, 0.9) 70%, transparent 100%);">
    <% if @game.host?(current_user) %>
      <%= button_to "Iniciar Juego",
          truth_or_dare_start_path(@game),
          method: :post,
          class: "w-full py-4 rounded-2xl font-bold text-lg text-white transition-all duration-300 active:scale-[0.98] disabled:opacity-40 disabled:cursor-not-allowed",
          style: @game.can_start? ? "background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); box-shadow: 0 0 40px rgba(168, 85, 247, 0.5);" : "background: rgba(60, 60, 60, 0.5);",
          disabled: !@game.can_start?,
          data: { turbo_confirm: "Iniciar el juego?" } %>
    <% else %>
      <div class="text-center py-4 rounded-2xl"
           style="background: rgba(10, 10, 15, 0.9); border: 1px solid rgba(168, 85, 247, 0.2);">
        <div class="flex items-center justify-center gap-3">
          <div class="w-2 h-2 rounded-full bg-purple-400 animate-pulse"></div>
          <p class="text-purple-400/80 text-sm">Esperando al anfitrion...</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
