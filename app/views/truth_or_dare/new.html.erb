<div class="min-h-screen -mt-16 pt-24 pb-12 relative overflow-hidden">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[400px] md:h-[400px] bg-cyan-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="relative z-10 max-w-md mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-black mb-2">
        <span class="text-cyan-400">Verdad</span>
        <span class="text-white/60 mx-1">o</span>
        <span class="text-pink-400">Reto</span>
      </h1>
      <p class="text-white/50">Configura tu partida</p>
    </div>

    <!-- Form -->
    <div class="p-6 rounded-2xl"
         style="background: rgba(10, 10, 15, 0.8); border: 1px solid rgba(255, 255, 255, 0.1);">

      <%= form_with model: @game, url: truth_or_dare_index_path, method: :post, class: "space-y-6" do |f| %>

        <!-- Intensity Level -->
        <div>
          <label class="block text-sm font-medium text-white/80 mb-3">Nivel de Intensidad</label>
          <div class="grid grid-cols-3 gap-2">
            <label class="cursor-pointer">
              <%= f.radio_button :intensity_level, :mild, class: "hidden peer", checked: true %>
              <div class="p-3 rounded-xl text-center transition-all duration-200 peer-checked:ring-2 peer-checked:ring-green-500 peer-checked:bg-green-500/10"
                   style="background: rgba(34, 197, 94, 0.05); border: 1px solid rgba(34, 197, 94, 0.3);">
                <span class="text-2xl mb-1 block">ðŸ˜‡</span>
                <span class="text-xs font-medium text-green-400">Suave</span>
              </div>
            </label>
            <label class="cursor-pointer">
              <%= f.radio_button :intensity_level, :medium, class: "hidden peer" %>
              <div class="p-3 rounded-xl text-center transition-all duration-200 peer-checked:ring-2 peer-checked:ring-yellow-500 peer-checked:bg-yellow-500/10"
                   style="background: rgba(234, 179, 8, 0.05); border: 1px solid rgba(234, 179, 8, 0.3);">
                <span class="text-2xl mb-1 block">ðŸ˜ˆ</span>
                <span class="text-xs font-medium text-yellow-400">Medio</span>
              </div>
            </label>
            <label class="cursor-pointer">
              <%= f.radio_button :intensity_level, :spicy, class: "hidden peer" %>
              <div class="p-3 rounded-xl text-center transition-all duration-200 peer-checked:ring-2 peer-checked:ring-red-500 peer-checked:bg-red-500/10"
                   style="background: rgba(239, 68, 68, 0.05); border: 1px solid rgba(239, 68, 68, 0.3);">
                <span class="text-2xl mb-1 block">ðŸ”¥</span>
                <span class="text-xs font-medium text-red-400">Picante</span>
              </div>
            </label>
          </div>
        </div>

        <!-- Max Players -->
        <div>
          <label class="block text-sm font-medium text-white/80 mb-2">Jugadores Maximos</label>
          <div class="relative">
            <%= f.select :max_players, (2..20).to_a.map { |n| [n, n] },
                { selected: 10 },
                class: "w-full px-4 py-3 rounded-xl text-white appearance-none cursor-pointer focus:outline-none focus:ring-2 focus:ring-purple-500/50",
                style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.3);" %>
            <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <button type="submit"
                class="w-full py-4 rounded-xl font-bold text-lg text-white transition-all duration-300 hover:scale-[1.02]"
                style="background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); box-shadow: 0 0 30px rgba(168, 85, 247, 0.3);">
          Crear Partida
        </button>
      <% end %>
    </div>

    <!-- Back link -->
    <div class="text-center mt-6">
      <%= link_to truth_or_dare_index_path, class: "inline-flex items-center gap-2 text-white/50 hover:text-white transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Volver
      <% end %>
    </div>
  </div>
</div>
