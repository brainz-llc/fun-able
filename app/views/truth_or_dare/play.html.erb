<% content_for :hide_footer, true %>
<%
  is_my_turn = @is_my_turn
  current_player = @current_player
%>

<div class="min-h-screen relative overflow-hidden"
     data-controller="truth-or-dare"
     data-truth-or-dare-game-id-value="<%= @game.id %>"
     data-truth-or-dare-player-id-value="<%= @game.player_for(current_user)&.id %>"
     data-truth-or-dare-is-my-turn-value="<%= is_my_turn %>">

  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-cyan-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-96 h-96 md:w-[600px] md:h-[600px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Top Bar -->
  <div class="relative z-20 px-4 py-3 bg-black/60 backdrop-blur-xl border-b border-white/5">
    <div class="flex items-center justify-between max-w-4xl mx-auto">
      <!-- Left: Game Title -->
      <div class="flex items-center gap-2">
        <h1 class="font-bold text-lg">
          <span class="text-cyan-400">V</span><span class="text-white/60">o</span><span class="text-pink-400">R</span>
        </h1>
        <div class="px-2 py-0.5 rounded text-[10px] font-medium"
             style="background: <%= @game.intensity_mild? ? 'rgba(34, 197, 94, 0.2)' : @game.intensity_medium? ? 'rgba(234, 179, 8, 0.2)' : 'rgba(239, 68, 68, 0.2)' %>;
                    color: <%= @game.intensity_mild? ? '#86efac' : @game.intensity_medium? ? '#fcd34d' : '#fca5a5' %>;">
          <%= @game.intensity_mild? ? 'üòá Suave' : @game.intensity_medium? ? 'üòà Medio' : 'üî• Picante' %>
        </div>
      </div>

      <!-- Right: Menu -->
      <button type="button" class="p-2 rounded-lg text-white/50 hover:text-white hover:bg-white/10 transition-all"
              onclick="document.getElementById('scoreboardModal').classList.toggle('hidden')">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 max-w-2xl mx-auto px-4 py-8">

    <!-- Current Player Indicator -->
    <div class="text-center mb-8" data-truth-or-dare-target="currentPlayer">
      <p class="text-white/50 text-sm mb-2">Turno de</p>
      <div class="inline-flex items-center gap-3 px-5 py-3 rounded-2xl"
           style="background: linear-gradient(145deg, rgba(168, 85, 247, 0.15) 0%, rgba(168, 85, 247, 0.05) 100%);
                  border: 1px solid rgba(168, 85, 247, 0.3);
                  box-shadow: 0 0 30px rgba(168, 85, 247, 0.2);">
        <div class="w-12 h-12 rounded-full flex items-center justify-center text-lg font-bold text-white"
             style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);">
          <%= current_player&.avatar_initials %>
        </div>
        <div class="text-left">
          <p class="font-bold text-white text-lg"><%= current_player&.display_name %></p>
          <% if is_my_turn %>
            <p class="text-purple-400 text-sm font-medium">Tu turno!</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Choice Buttons (only visible when it's your turn and no card drawn) -->
    <% if is_my_turn %>
      <div class="grid grid-cols-2 gap-4 mb-8" data-truth-or-dare-target="actionButtons">
        <!-- Truth Button -->
        <button type="button"
                class="group p-6 rounded-2xl transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
                style="background: linear-gradient(145deg, rgba(6, 182, 212, 0.15) 0%, rgba(6, 182, 212, 0.05) 100%);
                       border: 2px solid rgba(6, 182, 212, 0.4);
                       box-shadow: 0 0 30px rgba(6, 182, 212, 0.15);"
                data-truth-or-dare-target="truthButton"
                data-action="click->truth-or-dare#chooseTruth">
          <div class="text-center">
            <span class="text-5xl mb-3 block group-hover:scale-110 transition-transform">ü§î</span>
            <span class="text-2xl font-black text-cyan-400 block" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.5);">
              VERDAD
            </span>
            <span class="text-white/50 text-xs mt-1 block">Responde con honestidad</span>
          </div>
        </button>

        <!-- Dare Button -->
        <button type="button"
                class="group p-6 rounded-2xl transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
                style="background: linear-gradient(145deg, rgba(236, 72, 153, 0.15) 0%, rgba(236, 72, 153, 0.05) 100%);
                       border: 2px solid rgba(236, 72, 153, 0.4);
                       box-shadow: 0 0 30px rgba(236, 72, 153, 0.15);"
                data-truth-or-dare-target="dareButton"
                data-action="click->truth-or-dare#chooseDare">
          <div class="text-center">
            <span class="text-5xl mb-3 block group-hover:scale-110 transition-transform">üòà</span>
            <span class="text-2xl font-black text-pink-400 block" style="text-shadow: 0 0 20px rgba(236, 72, 153, 0.5);">
              RETO
            </span>
            <span class="text-white/50 text-xs mt-1 block">Atrevete a hacerlo</span>
          </div>
        </button>
      </div>
    <% else %>
      <!-- Waiting message for other players -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center gap-3 px-5 py-3 rounded-xl"
             style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1);">
          <div class="w-2 h-2 rounded-full bg-purple-400 animate-pulse"></div>
          <span class="text-white/60">Esperando que <%= current_player&.display_name %> elija...</span>
        </div>
      </div>
    <% end %>

    <!-- Card Display (hidden initially, shown when card is drawn) -->
    <div class="hidden mb-8" data-truth-or-dare-target="cardDisplay">
      <div class="text-center">
        <p class="text-2xl font-black uppercase tracking-wider mb-4" data-truth-or-dare-target="cardType">
          <!-- VERDAD or RETO -->
        </p>
        <p class="text-xl text-white leading-relaxed" data-truth-or-dare-target="cardContent">
          <!-- Card content -->
        </p>
      </div>
    </div>

    <!-- Response Buttons (hidden initially, shown after card is drawn for current player) -->
    <div class="hidden grid grid-cols-2 gap-4" data-truth-or-dare-target="responseButtons">
      <!-- Complete Button -->
      <button type="button"
              class="py-4 px-6 rounded-xl font-bold text-white transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
              style="background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
                     box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);"
              data-truth-or-dare-target="completeButton"
              data-action="click->truth-or-dare#completeChallenge">
        <span class="text-xl mr-2">‚úì</span> Completado!
      </button>

      <!-- Drink Button -->
      <button type="button"
              class="py-4 px-6 rounded-xl font-bold text-white transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
              style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
                     box-shadow: 0 0 20px rgba(245, 158, 11, 0.3);"
              data-truth-or-dare-target="drinkButton"
              data-action="click->truth-or-dare#drink">
        <span class="text-xl mr-2">üç∫</span> Tomo!
      </button>
    </div>

    <!-- Players Ring -->
    <div class="mt-12">
      <h3 class="text-center text-white/50 text-sm mb-4">Jugadores</h3>
      <div class="flex flex-wrap justify-center gap-3" data-truth-or-dare-target="playersList">
        <% @players.each do |player| %>
          <div class="flex flex-col items-center">
            <div class="w-12 h-12 rounded-full flex items-center justify-center text-sm font-bold text-white relative
                        <%= player.current_turn? ? 'ring-2 ring-purple-500 ring-offset-2 ring-offset-black' : '' %>"
                 style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);">
              <%= player.avatar_initials %>
              <% if player.current_turn? %>
                <span class="absolute -bottom-1 -right-1 w-4 h-4 rounded-full bg-purple-500 flex items-center justify-center text-[10px]">
                  ‚ñ∂
                </span>
              <% end %>
            </div>
            <span class="text-[10px] text-white/50 mt-1 max-w-[60px] truncate"><%= player.display_name %></span>
            <div class="flex items-center gap-1 mt-0.5">
              <% if player.drinks_taken > 0 %>
                <span class="text-[10px] text-yellow-400">üç∫<%= player.drinks_taken %></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Scoreboard Modal -->
  <div id="scoreboardModal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4" style="background: rgba(0, 0, 0, 0.9);">
    <div class="w-full max-w-md p-6 rounded-2xl"
         style="background: linear-gradient(145deg, #0f0f0f 0%, #1a1a1a 100%);
                border: 1px solid rgba(168, 85, 247, 0.3);">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-white">Puntuacion</h2>
        <button type="button" onclick="document.getElementById('scoreboardModal').classList.add('hidden')"
                class="p-2 text-white/50 hover:text-white">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div class="space-y-3" data-truth-or-dare-target="leaderboard">
        <% @game.leaderboard.each do |player| %>
          <div class="flex items-center justify-between p-3 rounded-xl"
               style="background: rgba(168, 85, 247, 0.1); border: 1px solid rgba(168, 85, 247, 0.2);">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white"
                   style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);">
                <%= player.avatar_initials %>
              </div>
              <span class="font-medium text-white"><%= player.display_name %></span>
            </div>
            <div class="flex items-center gap-3 text-sm">
              <span class="text-cyan-400" title="Verdades">ü§î <%= player.truths_completed %></span>
              <span class="text-pink-400" title="Retos">üòà <%= player.dares_completed %></span>
              <span class="text-yellow-400" title="Tragos">üç∫ <%= player.drinks_taken %></span>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-6 pt-4 border-t border-white/10">
        <%= button_to "Abandonar Partida",
            truth_or_dare_leave_path(@game),
            method: :post,
            class: "w-full py-3 rounded-xl text-sm font-bold text-red-400 bg-red-500/10 border border-red-500/30",
            data: { turbo_confirm: "Abandonar la partida?" } %>
      </div>
    </div>
  </div>
</div>

<style>
  .card-reveal {
    animation: cardReveal 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes cardReveal {
    0% {
      opacity: 0;
      transform: scale(0.8) rotateY(90deg);
    }
    50% {
      transform: scale(1.05) rotateY(0deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotateY(0deg);
    }
  }
</style>
