<div class="min-h-screen -mt-16 pt-24 pb-12 relative overflow-hidden">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[400px] md:h-[400px] bg-cyan-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[300px] md:h-[300px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-6xl font-black mb-4">
        <span class="text-white" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.5);">Verdad</span>
        <span class="text-white/60 mx-2">o</span>
        <span class="text-white" style="text-shadow: 0 0 20px rgba(236, 72, 153, 0.5);">Reto</span>
      </h1>
      <p class="text-white/60 text-lg max-w-md mx-auto">
        El clasico juego de fiesta. Elige verdad o reto, o toma un trago!
      </p>
    </div>

    <!-- Action Cards -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <!-- Create Game Card -->
      <div class="p-6 rounded-2xl transition-all duration-300 hover:scale-[1.02]"
           style="background: linear-gradient(145deg, rgba(6, 182, 212, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
                  border: 1px solid rgba(6, 182, 212, 0.3);
                  box-shadow: 0 0 30px rgba(6, 182, 212, 0.1);">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-4"
               style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);
                      border: 2px solid rgba(6, 182, 212, 0.4);">
            <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-white mb-2">Crear Partida</h2>
          <p class="text-white/50 text-sm mb-4">Inicia un nuevo juego y invita a tus amigos</p>
          <%= link_to new_truth_or_dare_path,
              class: "inline-block w-full py-3 rounded-xl font-bold text-white transition-all duration-300 hover:scale-[1.02]",
              style: "background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);" do %>
            Crear Partida
          <% end %>
        </div>
      </div>

      <!-- Join Game Card -->
      <div class="p-6 rounded-2xl transition-all duration-300 hover:scale-[1.02]"
           style="background: linear-gradient(145deg, rgba(236, 72, 153, 0.1) 0%, rgba(236, 72, 153, 0.05) 100%);
                  border: 1px solid rgba(236, 72, 153, 0.3);
                  box-shadow: 0 0 30px rgba(236, 72, 153, 0.1);">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full mb-4"
               style="background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(236, 72, 153, 0.1) 100%);
                      border: 2px solid rgba(236, 72, 153, 0.4);">
            <svg class="w-8 h-8 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
          <h2 class="text-xl font-bold text-white mb-2">Unirse a Partida</h2>
          <p class="text-white/50 text-sm mb-4">Ingresa el codigo de 6 digitos para unirte</p>
          <%= form_with url: truth_or_dare_join_by_code_path, method: :post, class: "space-y-3" do |f| %>
            <input type="text" name="code" placeholder="CODIGO"
                   class="w-full px-4 py-3 rounded-xl text-center text-xl font-mono font-bold tracking-widest uppercase bg-black/30 border border-pink-500/30 text-white placeholder-white/30 focus:outline-none focus:border-pink-500 focus:ring-2 focus:ring-pink-500/20"
                   maxlength="6" autocomplete="off">
            <button type="submit"
                    class="w-full py-3 rounded-xl font-bold text-white transition-all duration-300 hover:scale-[1.02]"
                    style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 20px rgba(236, 72, 153, 0.3);">
              Unirse
            </button>
          <% end %>
        </div>
      </div>
    </div>

    <!-- How to Play -->
    <div class="p-6 rounded-2xl mb-8"
         style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(255, 255, 255, 0.1);">
      <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
        <span class="text-purple-400">?</span> Como Jugar
      </h3>
      <div class="grid md:grid-cols-3 gap-4 text-sm">
        <div class="flex items-start gap-3">
          <span class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-cyan-400 font-bold"
                style="background: rgba(6, 182, 212, 0.2); border: 1px solid rgba(6, 182, 212, 0.3);">1</span>
          <div>
            <p class="text-white font-medium">Elige</p>
            <p class="text-white/50">Verdad o Reto cuando sea tu turno</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <span class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-pink-400 font-bold"
                style="background: rgba(236, 72, 153, 0.2); border: 1px solid rgba(236, 72, 153, 0.3);">2</span>
          <div>
            <p class="text-white font-medium">Responde o Cumple</p>
            <p class="text-white/50">La verdad o el reto que te toque</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <span class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-purple-400 font-bold"
                style="background: rgba(168, 85, 247, 0.2); border: 1px solid rgba(168, 85, 247, 0.3);">3</span>
          <div>
            <p class="text-white font-medium">O Toma</p>
            <p class="text-white/50">Un trago si no quieres cumplir</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Back to home -->
    <div class="text-center">
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-white/50 hover:text-white transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Volver al inicio
      <% end %>
    </div>
  </div>
</div>
