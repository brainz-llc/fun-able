<div class="neon-card-item <%= card.black? ? 'neon-card-item-black text-white' : 'neon-card-item-white text-black' %>" id="<%= dom_id(card) %>">
  <div class="flex-grow">
    <p class="font-medium leading-relaxed">
      <%= card.content.gsub('_____', '<span class="inline-block border-b-2 mx-1 min-w-12 ' + (card.black? ? 'border-pink-400' : 'border-cyan-500') + '"></span>').html_safe %>
    </p>
    <% if card.black? && card.pick_count > 1 %>
      <span class="inline-block mt-2 text-xs px-2 py-1 rounded-full neon-border-pink bg-pink-500/20">
        Elige <%= card.pick_count %>
      </span>
    <% end %>
  </div>

  <div class="flex gap-2 ml-4">
    <%= link_to edit_deck_deck_card_path(@deck, card),
        class: "p-2 rounded-lg transition-all duration-300 hover:scale-110 #{card.black? ? 'hover:neon-glow-pink' : 'hover:neon-glow-cyan'}" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    <% end %>
    <%= button_to deck_deck_card_path(@deck, card),
        method: :delete,
        class: "p-2 rounded-lg transition-all duration-300 hover:scale-110 hover:bg-error/20",
        data: { turbo_confirm: "Eliminar esta carta?" } do %>
      <svg class="w-5 h-5 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
</div>
