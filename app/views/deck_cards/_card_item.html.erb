<div id="<%= dom_id(card) %>"
     class="group flex items-start gap-3 p-4 rounded-xl transition-all duration-200 hover:scale-[1.01]"
     style="background: <%= card.black? ? 'linear-gradient(145deg, rgba(10, 10, 15, 0.9) 0%, rgba(20, 20, 25, 0.9) 100%)' : 'linear-gradient(145deg, rgba(25, 25, 30, 0.9) 0%, rgba(35, 35, 40, 0.9) 100%)' %>;
            border: 1px solid <%= card.black? ? 'rgba(236, 72, 153, 0.25)' : 'rgba(6, 182, 212, 0.25)' %>;">

  <!-- Card Content -->
  <div class="flex-grow min-w-0">
    <p class="text-white text-sm leading-relaxed">
      <%= card.content.gsub('_____', '<span class="inline-block w-12 border-b-2 mx-0.5 ' + (card.black? ? 'border-pink-400' : 'border-cyan-400') + '"></span>').html_safe %>
    </p>
    <% if card.black? && card.pick_count > 1 %>
      <span class="inline-flex items-center gap-1 mt-2 text-[10px] px-2 py-0.5 rounded-full bg-pink-500/20 text-pink-400 border border-pink-500/30">
        Elige <%= card.pick_count %>
      </span>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="flex items-center gap-1 opacity-50 group-hover:opacity-100 transition-opacity">
    <%= link_to edit_deck_deck_card_path(@deck, card),
        class: "p-2 rounded-lg transition-all hover:bg-white/10 #{card.black? ? 'text-pink-400/70 hover:text-pink-400' : 'text-cyan-400/70 hover:text-cyan-400'}" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    <% end %>
    <%= button_to deck_deck_card_path(@deck, card),
        method: :delete,
        class: "p-2 rounded-lg transition-all text-red-400/70 hover:text-red-400 hover:bg-red-500/10",
        data: { turbo_confirm: "Eliminar esta carta?" } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
</div>
