<div class="min-h-screen -mt-16 pt-16 relative">
  <!-- Background Gradients -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[400px] md:h-[400px] bg-pink-500/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 py-6 lg:py-10">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to deck_path(@deck), class: "inline-flex items-center gap-2 text-white/50 hover:text-white transition-colors mb-4" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="text-sm">Volver al mazo</span>
      <% end %>

      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl lg:text-3xl font-bold text-white"><%= @deck.name %></h1>
          <div class="flex items-center gap-4 mt-2">
            <span class="flex items-center gap-2">
              <span class="w-3 h-3 rounded bg-pink-500"></span>
              <span class="text-pink-400 font-bold"><%= @deck.black_cards.count %></span>
              <span class="text-white/40 text-sm">negras</span>
            </span>
            <span class="flex items-center gap-2">
              <span class="w-3 h-3 rounded bg-cyan-400"></span>
              <span class="text-cyan-400 font-bold"><%= @deck.white_cards.count %></span>
              <span class="text-white/40 text-sm">blancas</span>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Cards Grid -->
    <div class="grid lg:grid-cols-2 gap-6 lg:gap-10">
      <!-- Black Cards Section -->
      <div>
        <div class="flex items-center justify-between mb-4 pb-3 border-b border-pink-500/20">
          <h2 class="text-lg font-bold text-white flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-pink-500"></span>
            Cartas Negras
          </h2>
          <%= link_to new_deck_deck_card_path(@deck, card_type: 'black'),
              class: "flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium text-pink-400 bg-pink-500/10 border border-pink-500/30 hover:bg-pink-500/20 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Agregar
          <% end %>
        </div>

        <div id="black_cards" class="space-y-3">
          <% @black_cards.each do |card| %>
            <%= render 'card_item', card: card %>
          <% end %>
        </div>

        <% if @black_cards.empty? %>
          <div class="text-center py-12 rounded-xl border border-dashed border-pink-500/20 bg-pink-500/5">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-pink-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-pink-400/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <p class="text-white/50">No hay cartas negras</p>
            <p class="text-sm text-white/30 mt-1">Agrega cartas de pregunta</p>
          </div>
        <% end %>
      </div>

      <!-- White Cards Section -->
      <div>
        <div class="flex items-center justify-between mb-4 pb-3 border-b border-cyan-500/20">
          <h2 class="text-lg font-bold text-white flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-cyan-400"></span>
            Cartas Blancas
          </h2>
          <%= link_to new_deck_deck_card_path(@deck, card_type: 'white'),
              class: "flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-medium text-cyan-400 bg-cyan-500/10 border border-cyan-500/30 hover:bg-cyan-500/20 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Agregar
          <% end %>
        </div>

        <div id="white_cards" class="space-y-3">
          <% @white_cards.each do |card| %>
            <%= render 'card_item', card: card %>
          <% end %>
        </div>

        <% if @white_cards.empty? %>
          <div class="text-center py-12 rounded-xl border border-dashed border-cyan-500/20 bg-cyan-500/5">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-cyan-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-cyan-400/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <p class="text-white/50">No hay cartas blancas</p>
            <p class="text-sm text-white/30 mt-1">Agrega cartas de respuesta</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Bulk Add Section -->
    <div class="mt-12 rounded-2xl overflow-hidden"
         style="background: rgba(15, 15, 20, 0.8); border: 1px solid rgba(168, 85, 247, 0.2);">
      <!-- Header gradient line -->
      <div class="h-1 bg-gradient-to-r from-pink-500 via-purple-500 to-cyan-500"></div>

      <div class="p-6 lg:p-8">
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
          <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Agregar Multiples Cartas
        </h2>

        <%= form_with url: bulk_create_deck_deck_cards_path(@deck), method: :post, class: "space-y-5" do |f| %>
          <div>
            <label class="block text-sm font-medium text-white/70 mb-2">Tipo de Carta</label>
            <%= f.select :card_type,
                options_for_select([['Carta Blanca (respuesta)', 'white'], ['Carta Negra (pregunta)', 'black']]),
                {},
                class: "w-full sm:w-auto px-4 py-2.5 rounded-lg text-white cursor-pointer transition-all",
                style: "background: rgba(0, 0, 0, 0.4); border: 1px solid rgba(168, 85, 247, 0.3);" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-white/70 mb-2">Cartas (una por linea)</label>
            <%= f.text_area :cards,
                class: "w-full px-4 py-3 rounded-xl text-white font-mono text-sm leading-relaxed resize-y transition-all focus:outline-none",
                style: "background: rgba(0, 0, 0, 0.4); border: 1px solid rgba(168, 85, 247, 0.2); min-height: 200px;",
                placeholder: "Escribe cada carta en una linea separada.\nUsa _____ para los espacios en blanco.\n\nEjemplo:\nNada dice 'te amo' como _____.\nLa fiesta se acabo cuando llego _____." %>
            <p class="text-xs text-white/40 mt-2">
              <span class="text-purple-400">Tip:</span> Usa <code class="px-1.5 py-0.5 rounded bg-white/10 text-white/60">_____</code> (5 guiones) para indicar los espacios en blanco
            </p>
          </div>

          <div class="pt-2">
            <%= f.submit "Agregar Cartas",
                class: "px-6 py-3 rounded-xl font-bold text-white cursor-pointer transition-all hover:scale-[1.02] active:scale-[0.98]",
                style: "background: linear-gradient(135deg, #a855f7 0%, #7c3aed 100%); box-shadow: 0 4px 20px rgba(168, 85, 247, 0.3);" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
