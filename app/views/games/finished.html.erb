<% content_for :hide_footer, true %>

<div class="min-h-screen relative overflow-hidden" data-controller="victory">
  <!-- Animated Background Gradients (like landing page) -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-96 h-96 md:w-[600px] md:h-[600px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <!-- Winner celebration glow -->
    <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[400px] h-[400px] bg-yellow-500/10 rounded-full blur-3xl animate-pulse"></div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 max-w-2xl mx-auto px-4 py-12 md:py-16">

    <!-- Victory Header -->
    <div class="text-center mb-10">
      <!-- Trophy with glow -->
      <div class="inline-flex items-center justify-center w-24 h-24 md:w-32 md:h-32 rounded-full mb-6"
           style="background: linear-gradient(145deg, rgba(251, 191, 36, 0.2) 0%, rgba(251, 191, 36, 0.05) 100%);
                  border: 2px solid rgba(251, 191, 36, 0.4);
                  box-shadow: 0 0 60px rgba(251, 191, 36, 0.4), 0 0 120px rgba(251, 191, 36, 0.2);">
        <span class="text-5xl md:text-6xl">üèÜ</span>
      </div>

      <!-- Title -->
      <h1 class="text-3xl md:text-4xl font-black text-white mb-4">
        Partida Terminada
      </h1>

      <!-- Winner announcement -->
      <% if current_game.winner %>
        <div class="inline-block px-6 py-3 rounded-2xl"
             style="background: linear-gradient(145deg, rgba(236, 72, 153, 0.15) 0%, rgba(168, 85, 247, 0.1) 100%);
                    border: 1px solid rgba(236, 72, 153, 0.3);
                    box-shadow: 0 0 30px rgba(236, 72, 153, 0.2);">
          <p class="text-xl md:text-2xl font-bold text-pink-400">
            <%= current_game.winner.display_name %> gana!
          </p>
          <p class="text-sm text-white/50 mt-1">
            con <%= current_game.winner.score %> puntos
          </p>
        </div>
      <% end %>
    </div>

    <!-- Final Leaderboard -->
    <div class="rounded-2xl p-6 md:p-8 mb-8"
         style="background: linear-gradient(145deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%);
                border: 1px solid rgba(255,255,255,0.1);
                box-shadow: 0 20px 50px rgba(0,0,0,0.3);">

      <h2 class="text-lg font-bold text-white/80 mb-6 text-center">Resultados Finales</h2>

      <div class="space-y-3">
        <% current_game.leaderboard.each_with_index do |player, index| %>
          <%
            # Determine styling based on position
            is_winner = index == 0
            is_podium = index < 3
            medal = case index
                    when 0 then 'ü•á'
                    when 1 then 'ü•à'
                    when 2 then 'ü•â'
                    else nil
                    end
          %>
          <div class="flex items-center justify-between p-4 rounded-xl transition-all duration-300
                      <%= 'hover:scale-[1.02]' if is_podium %>"
               style="<% if is_winner %>
                        background: linear-gradient(145deg, rgba(251, 191, 36, 0.15) 0%, rgba(251, 191, 36, 0.05) 100%);
                        border: 2px solid rgba(251, 191, 36, 0.4);
                        box-shadow: 0 0 30px rgba(251, 191, 36, 0.2);
                      <% elsif index == 1 %>
                        background: linear-gradient(145deg, rgba(192, 192, 192, 0.1) 0%, rgba(192, 192, 192, 0.03) 100%);
                        border: 1px solid rgba(192, 192, 192, 0.3);
                      <% elsif index == 2 %>
                        background: linear-gradient(145deg, rgba(205, 127, 50, 0.1) 0%, rgba(205, 127, 50, 0.03) 100%);
                        border: 1px solid rgba(205, 127, 50, 0.3);
                      <% else %>
                        background: rgba(255,255,255,0.03);
                        border: 1px solid rgba(255,255,255,0.05);
                      <% end %>">

            <div class="flex items-center gap-4">
              <!-- Position -->
              <div class="w-10 h-10 flex items-center justify-center">
                <% if medal %>
                  <span class="text-2xl"><%= medal %></span>
                <% else %>
                  <span class="text-lg font-bold text-white/30"><%= index + 1 %></span>
                <% end %>
              </div>

              <!-- Avatar -->
              <div class="w-12 h-12 rounded-full flex items-center justify-center font-bold text-white text-sm"
                   style="background: linear-gradient(135deg, <%= is_winner ? '#fbbf24' : '#ec4899' %> 0%, <%= is_winner ? '#f59e0b' : '#a855f7' %> 100%);
                          box-shadow: 0 4px 15px <%= is_winner ? 'rgba(251, 191, 36, 0.4)' : 'rgba(236, 72, 153, 0.3)' %>;">
                <%= player.avatar_initials %>
              </div>

              <!-- Name -->
              <span class="font-bold text-lg <%= is_winner ? 'text-yellow-400' : 'text-white' %>">
                <%= player.display_name %>
              </span>
            </div>

            <!-- Score -->
            <div class="text-right">
              <span class="text-2xl font-black <%= is_winner ? 'text-yellow-400' : 'text-cyan-400' %>">
                <%= player.score %>
              </span>
              <span class="text-xs text-white/40 block">pts</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Game Stats (optional quick stats) -->
    <div class="grid grid-cols-2 gap-4 mb-8">
      <div class="p-4 rounded-xl text-center"
           style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.05);">
        <span class="text-2xl font-bold text-cyan-400"><%= current_game.rounds.complete.count %></span>
        <span class="block text-xs text-white/40 mt-1">Rondas jugadas</span>
      </div>
      <div class="p-4 rounded-xl text-center"
           style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.05);">
        <span class="text-2xl font-bold text-pink-400"><%= current_game.player_count %></span>
        <span class="block text-xs text-white/40 mt-1">Jugadores</span>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-4">
      <!-- New Game Button -->
      <%= link_to new_game_path, class: "block w-full" do %>
        <div class="flex items-center justify-center gap-3 py-4 px-8 rounded-xl bg-pink-500 transition-all duration-300 hover:bg-pink-400 active:scale-[0.98]"
             style="box-shadow: 0 0 30px rgba(236, 72, 153, 0.4);">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
          <span class="text-lg font-bold text-white">Nueva Partida</span>
        </div>
      <% end %>

      <!-- Back to Home -->
      <%= link_to root_path, class: "block w-full" do %>
        <div class="flex items-center justify-center gap-3 py-4 px-8 rounded-xl transition-all duration-300 hover:bg-white/5"
             style="background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1);">
          <svg class="w-5 h-5 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-lg font-medium text-white/60">Volver al Inicio</span>
        </div>
      <% end %>
    </div>

  </div>
</div>
