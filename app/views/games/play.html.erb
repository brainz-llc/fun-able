<% content_for :hide_footer, true %>
<%
  round = current_game.current_round
  is_judge = current_game_player&.current_judge?
  has_submitted = current_game_player&.submitted_for_round?(round)
  is_submitting_phase = round&.submitting?
  is_judging_phase = round&.judging? || round&.revealing?
  show_hand = !is_judge && !has_submitted && is_submitting_phase
%>

<div class="min-h-screen relative overflow-hidden"
     data-controller="game"
     data-game-id-value="<%= current_game.id %>"
     data-game-player-id-value="<%= current_game_player&.id %>"
     data-game-is-judge-value="<%= is_judge %>"
     data-game-phase-value="<%= round&.phase %>"
     data-game-has-submitted-value="<%= has_submitted %>">

  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-96 h-96 md:w-[600px] md:h-[600px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Top Bar -->
  <div class="relative z-20 px-4 py-3 bg-black/60 backdrop-blur-xl border-b border-white/5">
    <div class="flex items-center justify-between">
      <!-- Left: Round Counter -->
      <div class="flex items-center gap-2">
        <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg"
             style="background: linear-gradient(135deg, rgba(236, 72, 153, 0.15) 0%, rgba(168, 85, 247, 0.1) 100%);
                    border: 1px solid rgba(236, 72, 153, 0.2);">
          <span class="text-[10px] uppercase tracking-wider text-pink-400/70">Ronda</span>
          <span class="text-lg font-black text-white" style="text-shadow: 0 0 10px rgba(236, 72, 153, 0.4);">
            <%= round&.round_number || 1 %>
          </span>
        </div>
      </div>

      <!-- Center: Timer -->
      <div class="absolute left-1/2 -translate-x-1/2 flex flex-col items-center"
           data-game-target="timer"
           data-controller="timer"
           data-timer-expires-at-value="<%= round&.timer_expires_at&.iso8601 %>">
        <div class="relative">
          <div class="px-5 py-2 rounded-xl"
               style="background: linear-gradient(145deg, rgba(6, 182, 212, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
                      border: 1px solid rgba(6, 182, 212, 0.25);
                      box-shadow: 0 0 20px rgba(6, 182, 212, 0.1);">
            <span class="text-2xl md:text-3xl font-mono font-black text-cyan-400 tabular-nums"
                  data-timer-target="display"
                  style="text-shadow: 0 0 15px rgba(6, 182, 212, 0.6), 0 0 30px rgba(6, 182, 212, 0.3);">
              --
            </span>
          </div>
        </div>
      </div>

      <!-- Right: Score + Menu -->
      <div class="flex items-center gap-2">
        <!-- Score Badge -->
        <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg"
             style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.15) 0%, rgba(34, 211, 238, 0.1) 100%);
                    border: 1px solid rgba(6, 182, 212, 0.2);">
          <svg class="w-3.5 h-3.5 text-cyan-400/70" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span class="text-lg font-black text-white" style="text-shadow: 0 0 10px rgba(6, 182, 212, 0.4);">
            <%= current_game_player&.score || 0 %>
          </span>
          <span class="text-[10px] text-white/30">/ <%= current_game.points_to_win %></span>
        </div>

        <!-- Menu Button -->
        <button type="button"
                class="p-2 rounded-lg text-white/50 hover:text-white hover:bg-white/10 transition-all"
                data-action="click->game#toggleScoreboard">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 max-w-6xl mx-auto px-4 py-6">

    <!-- Game Table Area -->
    <div class="flex flex-col lg:flex-row lg:gap-8">

      <!-- Left: Black Card -->
      <div class="lg:w-1/4 flex justify-center lg:justify-end mb-6 lg:mb-0">
        <% if round&.black_card %>
          <div class="w-[180px] lg:w-[200px] aspect-[3/4] rounded-2xl p-4 flex flex-col justify-between transition-all duration-500"
               data-game-target="blackCard"
               style="background: linear-gradient(145deg, #0a0a0a 0%, #1a1a1a 100%);
                      border: 2px solid rgba(236, 72, 153, 0.4);
                      box-shadow: 0 0 30px rgba(236, 72, 153, 0.2), 0 15px 30px rgba(0,0,0,0.5);">
            <p class="text-white text-sm leading-relaxed font-medium">
              <%= round.black_card.display_content_with_blanks.gsub('_____', '<span class="inline-block w-14 border-b-2 border-pink-400"></span>').html_safe %>
            </p>
            <div class="flex items-center justify-between mt-3">
              <span class="text-[10px] text-pink-500/60">Fun-able</span>
              <% if round.pick_count > 1 %>
                <span class="text-[10px] px-2 py-0.5 rounded-full bg-pink-500/20 text-pink-400">
                  Elige <%= round.pick_count %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Center: Table (Submissions) -->
      <div class="lg:w-1/2 flex-grow">

        <!-- Status Message -->
        <div class="text-center mb-6" data-game-target="statusMessage">
          <% if is_judge %>
            <% if is_submitting_phase %>
              <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-2"
                   style="background: linear-gradient(135deg, rgba(236, 72, 153, 0.15) 0%, rgba(168, 85, 247, 0.1) 100%);
                          border: 1px solid rgba(236, 72, 153, 0.3);">
                <span class="text-lg">ğŸ‘‘</span>
                <span class="text-pink-400 font-bold text-sm">Eres el Zar</span>
              </div>
              <div class="flex items-center justify-center gap-3 mt-3" data-game-target="submissionCount">
                <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-white/5 border border-white/10">
                  <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
                  <span class="text-white/60 text-sm">Esperando cartas</span>
                  <span class="font-bold text-cyan-400"><%= round.submissions_count %></span>
                  <span class="text-white/30">/</span>
                  <span class="text-white/50"><%= round.expected_submissions_count %></span>
                </div>
              </div>
            <% else %>
              <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full"
                   style="background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(168, 85, 247, 0.15) 100%);
                          border: 1px solid rgba(236, 72, 153, 0.4);
                          animation: pulse 2s ease-in-out infinite;">
                <span class="text-lg">ğŸ‘†</span>
                <span class="text-pink-400 font-bold text-sm">Elige la carta ganadora</span>
              </div>
            <% end %>
          <% elsif has_submitted %>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-2"
                 style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.15) 0%, rgba(34, 211, 238, 0.1) 100%);
                        border: 1px solid rgba(6, 182, 212, 0.3);">
              <span class="text-lg">âœ“</span>
              <span class="text-cyan-400 font-bold text-sm">Carta enviada</span>
            </div>
            <div class="flex items-center justify-center gap-3 mt-3" data-game-target="submissionCount">
              <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-white/5 border border-white/10">
                <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
                <span class="text-white/60 text-sm">Esperando</span>
                <span class="font-bold text-cyan-400"><%= round.submissions_count %></span>
                <span class="text-white/30">/</span>
                <span class="text-white/50"><%= round.expected_submissions_count %></span>
              </div>
            </div>
          <% elsif is_judging_phase %>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full"
                 style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1);">
              <div class="w-2 h-2 rounded-full bg-pink-400 animate-pulse"></div>
              <span class="text-white/60 text-sm">El Zar esta eligiendo...</span>
            </div>
          <% else %>
            <p class="text-white/40 text-sm">Selecciona una carta de tu mano</p>
          <% end %>
        </div>

        <!-- Submitted Cards Table -->
        <div class="min-h-[200px] flex flex-wrap justify-center gap-3 mb-6"
             data-game-target="submissionsTable">

          <% if is_submitting_phase %>
            <!-- During submission: show face-down cards for each submission -->
            <% round.submissions_count.times do |i| %>
              <div class="w-[100px] h-[140px] rounded-xl transition-all duration-500"
                   data-game-target="tableCard"
                   style="background: linear-gradient(145deg, #1a1a2e 0%, #16213e 100%);
                          border: 1px solid rgba(6, 182, 212, 0.3);
                          box-shadow: 0 4px 20px rgba(0,0,0,0.4);
                          animation: slideInUp 0.4s ease-out <%= i * 0.1 %>s both;">
                <div class="w-full h-full flex items-center justify-center">
                  <span class="text-2xl opacity-30">ğŸƒ</span>
                </div>
              </div>
            <% end %>

            <!-- Empty slots for remaining players -->
            <% (round.expected_submissions_count - round.submissions_count).times do %>
              <div class="w-[100px] h-[140px] rounded-xl border-2 border-dashed border-white/10 flex items-center justify-center"
                   data-empty-slot>
                <span class="text-white/20 text-xs">...</span>
              </div>
            <% end %>

          <% elsif is_judging_phase %>
            <!-- During judging: show actual cards -->
            <% round.submissions_for_display.each_with_index do |submission, idx| %>
              <% is_mine = submission.player_id == current_game_player&.id %>
              <div class="w-[140px] min-h-[180px] p-3 rounded-xl flex flex-col transition-all duration-300
                          <%= is_mine ? 'border-2 border-purple-500/60 bg-gradient-to-b from-purple-500/15 to-purple-500/5' : 'bg-gradient-to-b from-white/10 to-white/5 border border-white/20' %>
                          <%= 'cursor-pointer hover:scale-105 hover:border-cyan-500' if is_judge && !submission.winner? %>"
                   style="box-shadow: 0 8px 30px rgba(0,0,0,0.4);
                          animation: flipIn 0.5s ease-out <%= idx * 0.15 %>s both;
                          <%= 'background: linear-gradient(145deg, rgba(251, 191, 36, 0.2) 0%, rgba(251, 191, 36, 0.05) 100%); border: 2px solid #fbbf24; box-shadow: 0 0 40px rgba(251, 191, 36, 0.4);' if submission.winner? %>"
                   data-submission-id="<%= submission.id %>"
                   data-game-target="submissionCard"
                   data-is-mine="<%= is_mine %>"
                   <%= "data-action=click->game#selectWinner" if is_judge && !submission.winner? %>>

                <% if is_mine && !submission.winner? %>
                  <span class="text-[10px] text-purple-400 font-bold uppercase mb-1">Tu carta</span>
                <% end %>

                <% if submission.winner? %>
                  <div class="text-center mb-2">
                    <span class="text-xl">ğŸ†</span>
                  </div>
                <% end %>

                <div class="flex-1">
                  <% submission.cards_in_order.each_with_index do |card, cidx| %>
                    <p class="text-xs text-white leading-snug <%= 'mt-2 pt-2 border-t border-white/10' if cidx > 0 %>">
                      <%= card.content %>
                    </p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Right: Scoreboard (Desktop) -->
      <div class="hidden lg:block lg:w-1/4">
        <div class="sticky top-20 p-4 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm">
          <h3 class="font-bold text-white text-sm mb-3">Puntuacion</h3>
          <% current_game.leaderboard.each do |player| %>
            <div class="flex items-center justify-between py-2 <%= 'bg-pink-500/10 rounded-lg px-2 -mx-2' if player.current_judge? %>">
              <div class="flex items-center gap-2">
                <div class="w-7 h-7 rounded-full flex items-center justify-center text-[10px] font-bold text-white"
                     style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);">
                  <%= player.avatar_initials %>
                </div>
                <span class="text-xs text-white <%= 'text-pink-400' if player.current_judge? %>">
                  <%= player.display_name %>
                  <%= 'ğŸ‘‘' if player.current_judge? %>
                </span>
              </div>
              <span class="text-lg font-bold text-cyan-400"><%= player.score %></span>
            </div>
          <% end %>
          <div class="mt-3 pt-3 border-t border-white/10 text-xs text-white/40">
            Meta: <span class="text-cyan-400 font-bold"><%= current_game.points_to_win %></span> pts
          </div>
        </div>
      </div>
    </div>

    <!-- Player's Hand (only if can submit) -->
    <% if show_hand %>
      <div class="mt-8 lg:mt-10 pb-4" data-controller="hand" data-hand-pick-count-value="<%= round&.pick_count || 1 %>">
        <div class="text-center mb-4">
          <h3 class="text-lg font-bold text-white">Tu Mano</h3>
          <p class="text-xs text-white/40">Toca para seleccionar</p>
        </div>

        <!-- Hand Cards -->
        <div class="flex gap-3 overflow-x-auto pt-4 lg:pt-6 pb-4 -mx-4 px-4 lg:mx-0 lg:px-0 lg:flex-wrap lg:justify-center"
             data-hand-target="cards"
             style="-webkit-overflow-scrolling: touch;">
          <% current_game_player&.cards_in_hand&.first(8)&.each do |card| %>
            <div class="game-card-touch flex-shrink-0 w-[130px] h-[175px] p-3 rounded-xl cursor-pointer transition-all duration-200
                        bg-gradient-to-b from-white/10 to-white/5 border border-cyan-500/30
                        hover:border-cyan-500 hover:-translate-y-2 active:scale-95"
                 data-card-id="<%= card.id %>"
                 data-action="click->hand#toggleCard"
                 style="box-shadow: 0 4px 20px rgba(0,0,0,0.3);">
              <p class="text-xs text-white leading-snug"><%= card.content %></p>
            </div>
          <% end %>
        </div>

        <!-- Hidden form for auto-submit -->
        <%= form_with url: submit_cards_game_game_actions_path(current_game),
                      method: :post,
                      data: { hand_target: "form", turbo_frame: "_top" },
                      class: "hidden" do |f| %>
          <div data-hand-target="cardInputs"></div>
        <% end %>
      </div>
    <% end %>

  </div>

  <!-- Mobile Scoreboard Overlay -->
  <div class="fixed inset-0 z-50 pointer-events-none" data-game-target="mobileScoreboardOverlay">
    <div class="absolute inset-0 bg-black/70 opacity-0 transition-opacity duration-300 pointer-events-none"
         data-game-target="mobileScoreboardBackdrop"
         data-action="click->game#toggleScoreboard"></div>
    <div class="absolute top-0 right-0 h-full w-4/5 max-w-sm bg-black/95 backdrop-blur-md transform translate-x-full transition-transform duration-300 border-l border-white/10"
         data-game-target="mobileScoreboardPanel">
      <div class="p-4 border-b border-white/10 flex items-center justify-between">
        <h3 class="font-bold text-white">Puntuacion</h3>
        <button type="button" class="p-2 text-white/50 hover:text-white" data-action="click->game#toggleScoreboard">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="p-4">
        <% current_game.leaderboard.each do |player| %>
          <div class="flex items-center justify-between py-3 border-b border-white/10 last:border-0">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white"
                   style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);">
                <%= player.avatar_initials %>
              </div>
              <span class="font-medium text-white">
                <%= player.display_name %>
                <% if player.current_judge? %>
                  <span class="text-pink-400 text-xs block">ğŸ‘‘ Zar</span>
                <% end %>
              </span>
            </div>
            <span class="text-2xl font-bold text-cyan-400"><%= player.score %></span>
          </div>
        <% end %>
        <div class="mt-4 pt-4 border-t border-white/10">
          <p class="text-sm text-white/50 mb-4">Meta: <span class="text-cyan-400 font-bold"><%= current_game.points_to_win %></span> puntos</p>
          <%= button_to "Abandonar",
              leave_game_game_actions_path(current_game),
              method: :post,
              class: "w-full py-3 rounded-xl text-sm font-bold text-red-400 bg-red-500/10 border border-red-500/30",
              data: { turbo_confirm: "Abandonar la partida?" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Winner Overlay -->
  <div class="hidden fixed inset-0 z-50 items-center justify-center p-4"
       style="background: rgba(0, 0, 0, 0.9); backdrop-filter: blur(8px);"
       data-game-target="winnerOverlay">
    <div class="w-full max-w-sm text-center opacity-0 scale-90 transition-all duration-500" data-animate-in>
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-full mb-4"
           style="background: linear-gradient(145deg, #fbbf24 0%, #f59e0b 100%);
                  box-shadow: 0 0 60px rgba(251, 191, 36, 0.6);">
        <span class="text-4xl">ğŸ†</span>
      </div>
      <h2 class="text-2xl font-bold text-white mb-6" data-game-target="winnerName">Â¡Ganador!</h2>
      <div class="mx-auto w-[180px] min-h-[220px] p-4 rounded-2xl flex flex-col justify-center"
           style="background: linear-gradient(145deg, rgba(251, 191, 36, 0.15) 0%, rgba(251, 191, 36, 0.05) 100%);
                  border: 2px solid #fbbf24;"
           data-game-target="winnerCard"></div>
      <div class="mt-6">
        <p class="text-white/50 text-sm mb-2">Siguiente ronda en</p>
        <div class="text-5xl font-bold text-cyan-400 hidden" data-game-target="countdown"
             style="text-shadow: 0 0 30px rgba(34, 211, 238, 0.6);">3</div>
      </div>
    </div>
  </div>

  <!-- Victory Modal (Game Win) -->
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4"
       style="display: none; background: rgba(0, 0, 0, 0.95);"
       data-game-target="victoryModal">
    <div class="w-full max-w-sm p-6 rounded-2xl text-center"
         style="background: linear-gradient(145deg, rgba(251, 191, 36, 0.1) 0%, rgba(0,0,0,0.9) 100%);
                border: 2px solid rgba(251, 191, 36, 0.4);">
      <div class="text-6xl mb-4">ğŸ†</div>
      <div class="text-2xl font-bold text-white mb-4" data-game-target="victoryTitle"></div>
      <button type="button"
              class="w-full py-3 rounded-xl font-bold text-black bg-yellow-400 hover:bg-yellow-300 transition-all"
              data-action="click->game#closeVictory">
        Continuar
      </button>
    </div>
  </div>
</div>

<style>
@keyframes slideInUp {
  from { opacity: 0; transform: translateY(20px) scale(0.9); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}
@keyframes flipIn {
  from { opacity: 0; transform: rotateY(90deg) scale(0.8); }
  to { opacity: 1; transform: rotateY(0) scale(1); }
}
</style>
