<% content_for :hide_footer, true %>
<div class="min-h-screen relative overflow-hidden"
     data-controller="game"
     data-game-id-value="<%= current_game.id %>"
     data-game-player-id-value="<%= current_game_player&.id %>"
     data-game-is-judge-value="<%= current_game_player&.current_judge? %>">

  <!-- Animated Background Gradients (like landing page) -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-96 h-96 md:w-[600px] md:h-[600px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Top Bar -->
  <div class="relative z-20 flex items-center justify-between px-4 py-3 bg-black/40 backdrop-blur-md border-b border-white/10">
    <!-- Round & Phase -->
    <div class="flex items-center gap-3">
      <span class="text-white font-bold">
        <%= t('game.play.round', number: current_game.current_round&.round_number || 1) %>
      </span>
      <span class="hidden sm:inline text-white/50 text-sm">
        <%= t("game.status.#{current_game.current_round&.phase || 'submitting'}") %>
      </span>
    </div>

    <!-- Timer -->
    <div class="text-3xl md:text-4xl font-mono font-bold text-cyan-400"
         data-game-target="timer"
         data-controller="timer"
         data-timer-expires-at-value="<%= current_game.current_round&.timer_expires_at&.iso8601 %>"
         style="text-shadow: 0 0 20px rgba(34, 211, 238, 0.5);">
      <span data-timer-target="display">--</span>
    </div>

    <!-- Score & Menu -->
    <div class="flex items-center gap-3">
      <!-- Mobile score badge -->
      <div class="lg:hidden flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-white/10 border border-white/10">
        <span class="text-xs text-white/50">Pts</span>
        <span class="font-bold text-cyan-400"><%= current_game_player&.score || 0 %></span>
      </div>

      <!-- Menu button -->
      <button type="button"
              class="p-2 rounded-lg text-white/60 hover:text-white hover:bg-white/10 transition-all"
              data-action="click->game#toggleScoreboard">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 flex flex-col lg:flex-row lg:gap-6 max-w-7xl mx-auto px-4 py-6">

    <!-- Left Column: Black Card -->
    <div class="lg:w-1/3 flex flex-col items-center mb-6 lg:mb-0 lg:sticky lg:top-24 lg:self-start">
      <% if current_game.current_round&.black_card %>
        <!-- Black Card (smaller) -->
        <div class="w-full max-w-[200px] lg:max-w-[240px] aspect-[3/4] rounded-2xl p-4 flex flex-col justify-between transition-all duration-500"
             data-game-target="blackCard"
             style="background: linear-gradient(145deg, #0a0a0a 0%, #1a1a1a 100%);
                    border: 2px solid rgba(236, 72, 153, 0.4);
                    box-shadow: 0 0 30px rgba(236, 72, 153, 0.2), 0 15px 30px rgba(0,0,0,0.5);">
          <p class="text-white text-sm md:text-base leading-relaxed font-medium">
            <%= current_game.current_round.black_card.display_content_with_blanks.gsub('_____', '<span class="inline-block w-16 md:w-20 border-b-2 border-pink-400" style="box-shadow: 0 0 8px #ec4899, 0 0 16px rgba(236, 72, 153, 0.5);"></span>').html_safe %>
          </p>
          <div class="flex items-center justify-between mt-4">
            <span class="text-xs text-pink-500/60">Fun-able</span>
            <% if current_game.current_round.pick_count > 1 %>
              <span class="text-xs px-2 py-1 rounded-full bg-pink-500/20 text-pink-400">
                Elige <%= current_game.current_round.pick_count %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Judge Message -->
      <% if current_game_player&.current_judge? && current_game.current_round&.submitting? %>
        <div class="mt-6 w-full max-w-[280px]" data-game-target="judgeMessage">
          <div class="text-center px-4 py-3 rounded-lg bg-pink-500/10 border border-pink-500/20">
            <p class="text-sm font-medium text-pink-400">Eres el Zar</p>
          </div>
          <p class="text-center text-xs text-white/40 mt-2" data-game-target="submissionCount">
            <span class="text-white/60"><%= current_game.current_round.submissions_count %></span>/<%= current_game.current_round.expected_submissions_count %> respondieron
          </p>
        </div>
      <% end %>
    </div>

    <!-- Center Column: Cards/Submissions -->
    <div class="lg:w-1/2 flex-grow pb-24 lg:pb-6">

      <!-- Judging Phase -->
      <% if current_game.current_round&.judging? || current_game.current_round&.revealing? %>
        <div data-game-target="judgingContainer">
          <!-- Phase Indicator -->
          <div class="text-center mb-4">
            <p class="text-sm text-cyan-400 font-medium transition-all"
               data-game-target="phaseIndicator">
              <%= current_game_player&.current_judge? ? "Elige la carta ganadora" : "El Zar decide..." %>
            </p>
          </div>

          <% if current_game_player&.current_judge? %>
            <div class="text-center mb-6 p-4 rounded-xl bg-pink-500/10 border border-pink-500/30">
              <p class="text-lg font-bold text-pink-400">&#x1F451; Eres el Zar</p>
              <p class="text-sm text-white/50 mt-1">Toca la carta ganadora</p>
            </div>
          <% else %>
            <div class="text-center mb-6 p-4 rounded-xl bg-white/5 border border-white/10">
              <p class="text-white/60" data-game-target="phaseIndicator">Esperando al Zar...</p>
            </div>
          <% end %>

          <!-- Submissions as Cards -->
          <div class="flex flex-nowrap lg:flex-wrap lg:justify-center gap-4 overflow-x-auto lg:overflow-visible pb-4 -mx-4 px-4 lg:mx-0 lg:px-0"
               data-game-target="submissions"
               style="-webkit-overflow-scrolling: touch; scroll-snap-type: x mandatory;">
            <% current_game.current_round.submissions_for_display.each_with_index do |submission, idx| %>
              <% is_mine = submission.player_id == current_game_player&.id %>
              <div class="flex-shrink-0 p-4 rounded-2xl flex flex-col relative
                          opacity-0 scale-75
                          <%= is_mine ? 'w-[180px] min-h-[240px] border-2 border-purple-500/60 bg-gradient-to-b from-purple-500/15 to-purple-500/5' : 'w-[160px] min-h-[220px]' %>
                          <%= submission.winner? ? '' : (is_mine ? '' : 'bg-gradient-to-b from-white/10 to-white/5 border border-cyan-500/30') %>
                          <%= 'cursor-pointer hover:border-cyan-500 hover:-translate-y-2 active:scale-95' if current_game_player&.current_judge? && !submission.winner? %>"
                   style="scroll-snap-align: center;
                          box-shadow: <%= is_mine ? '0 0 25px rgba(168, 85, 247, 0.3), 0 8px 30px rgba(0,0,0,0.4)' : '0 8px 30px rgba(0,0,0,0.4)' %>;
                          <%= 'background: linear-gradient(145deg, rgba(251, 191, 36, 0.2) 0%, rgba(251, 191, 36, 0.05) 100%); border: 2px solid #fbbf24; box-shadow: 0 0 40px rgba(251, 191, 36, 0.4), 0 8px 30px rgba(0,0,0,0.4);' if submission.winner? %>"
                   data-submission-id="<%= submission.id %>"
                   data-game-target="submissionCard"
                   data-card-index="<%= idx %>"
                   data-is-mine="<%= is_mine %>"
                   <%= "data-action=click->game#selectWinner" if current_game_player&.current_judge? && !submission.winner? %>>

              <% if submission.winner? %>
                <div class="text-center mb-3">
                  <span class="text-2xl">&#x1F3C6;</span>
                </div>
              <% elsif is_mine %>
                <div class="text-center mb-2">
                  <span class="text-xs font-bold text-purple-400 uppercase tracking-wide">Tu carta</span>
                </div>
              <% end %>

              <div class="flex-1">
                <% submission.cards_in_order.each_with_index do |card, idx| %>
                  <p class="text-sm text-white leading-snug <%= 'mt-3 pt-3 border-t border-white/10' if idx > 0 %>">
                    <%= card.content %>
                  </p>
                <% end %>
              </div>

              <% if submission.winner? %>
                <div class="mt-3 text-center">
                  <span class="text-xs font-bold text-yellow-400">GANADOR</span>
                </div>
              <% end %>
            </div>
          <% end %>
          </div>
        </div>
      <% end %>

      <!-- Player's Hand (not judge, not submitted) -->
      <% unless current_game_player&.current_judge? || current_game_player&.submitted_for_round?(current_game.current_round) %>
        <div id="hand-controller-wrapper"
             class="mt-8 lg:mt-6"
             data-controller="hand"
             data-hand-pick-count-value="<%= current_game.current_round&.pick_count || 1 %>">

          <div class="mb-4 flex items-center justify-between">
            <h3 class="text-lg font-bold text-white"><%= t('game.play.your_hand') %></h3>
            <span class="text-xs text-white/40 lg:hidden">Desliza &rarr;</span>
          </div>
            <!-- Hand Cards -->
            <div class="flex gap-3 overflow-x-auto pt-1 pb-3 -mx-4 px-4 lg:mx-0 lg:px-0 lg:pt-0 lg:pb-4 lg:flex-wrap lg:overflow-visible"
                 data-hand-target="cards"
                 style="-webkit-overflow-scrolling: touch; scroll-snap-type: x mandatory; scroll-padding-left: 1rem;">
              <% current_game_player&.cards_in_hand&.each do |card| %>
                <div class="game-card-touch flex-shrink-0 w-[140px] h-[190px] p-4 rounded-xl cursor-pointer transition-all duration-200
                            bg-gradient-to-b from-white/10 to-white/5 border border-cyan-500/30
                            hover:border-cyan-500/60 active:scale-95"
                     data-card-id="<%= card.id %>"
                     data-action="click->hand#toggleCard"
                     style="scroll-snap-align: start; box-shadow: 0 4px 20px rgba(0,0,0,0.3);">
                  <p class="text-sm text-white leading-snug"><%= card.content %></p>
                </div>
              <% end %>
              <!-- Spacer for last card visibility -->
              <div class="flex-shrink-0 w-4 lg:hidden" aria-hidden="true"></div>
            </div>

            <!-- Desktop Submit Button -->
            <%= form_with url: submit_cards_game_game_actions_path(current_game),
                          method: :post,
                          data: { hand_target: "form", turbo_frame: "_top" },
                          class: "hidden lg:block mt-6" do |f| %>
              <div data-hand-target="cardInputs"></div>
              <%= f.submit t('game.play.submit_cards'),
                  class: "w-full py-4 rounded-xl font-bold text-white bg-pink-500 hover:bg-pink-400
                          disabled:opacity-40 disabled:cursor-not-allowed transition-all cursor-pointer",
                  disabled: true,
                  data: { hand_target: "submitButton" } %>
            <% end %>

          <!-- Mobile Bottom Bar -->
          <div class="lg:hidden fixed bottom-0 left-0 right-0 z-[60] p-4 bg-black/95 backdrop-blur-md border-t border-white/10"
                 style="padding-bottom: max(1rem, env(safe-area-inset-bottom));">
              <div class="flex items-center gap-4">
                <div class="flex items-center gap-2">
                  <span class="text-white/50 text-sm">Seleccionadas:</span>
                  <span class="text-xl font-bold text-cyan-400" data-hand-target="mobileSelectedCount">0</span>
                  <span class="text-white/50">/ <%= current_game.current_round&.pick_count || 1 %></span>
                </div>

                <%= form_with url: submit_cards_game_game_actions_path(current_game),
                              method: :post,
                              data: { hand_target: "mobileForm", turbo_frame: "_top" },
                              class: "flex-1" do |f| %>
                  <div data-hand-target="mobileCardInputs"></div>
                  <%= f.submit t('game.play.submit_cards'),
                      class: "w-full py-3 rounded-xl font-bold text-white bg-pink-500
                              disabled:opacity-40 disabled:cursor-not-allowed transition-all cursor-pointer",
                      style: "box-shadow: 0 0 20px rgba(236, 72, 153, 0.3);",
                      disabled: true,
                      data: { hand_target: "mobileSubmitButton" } %>
                <% end %>
              </div>
            </div>

        </div>
      <% end %>
    </div>

    <!-- Right Column: Scoreboard (Desktop) -->
    <div class="hidden lg:block lg:w-1/4">
      <div class="sticky top-24 p-5 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm"
           data-game-target="scoreboard">
        <h3 class="font-bold text-white mb-4"><%= t('game.play.scoreboard') %></h3>

        <% current_game.leaderboard.each do |player| %>
          <div class="flex items-center justify-between py-3 border-b border-white/10 last:border-0
                      <%= 'bg-pink-500/10 rounded-lg px-2 -mx-2' if player.current_judge? %>">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold text-white"
                   style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);">
                <%= player.avatar_initials %>
              </div>
              <div>
                <span class="text-sm font-medium text-white">
                  <%= player.display_name %>
                </span>
                <% if player.current_judge? %>
                  <span class="block text-xs text-pink-400">&#x1F451; Zar</span>
                <% end %>
              </div>
            </div>
            <span class="text-xl font-bold text-cyan-400"><%= player.score %></span>
          </div>
        <% end %>

        <div class="mt-4 pt-4 border-t border-white/10 text-sm text-white/50">
          Meta: <span class="text-cyan-400 font-bold"><%= current_game.points_to_win %></span> puntos
        </div>

        <%= button_to t('game.actions.leave_game'),
            leave_game_game_actions_path(current_game),
            method: :post,
            class: "w-full mt-4 py-2 rounded-lg text-sm font-medium text-red-400 bg-red-500/10
                    border border-red-500/30 hover:bg-red-500/20 transition-all",
            data: { turbo_confirm: "Abandonar la partida?" } %>
      </div>
    </div>
  </div>

  <!-- Mobile Scoreboard Overlay -->
  <div class="fixed inset-0 z-50 pointer-events-none" data-game-target="mobileScoreboardOverlay">
    <div class="absolute inset-0 bg-black/70 opacity-0 transition-opacity duration-300 pointer-events-none"
         data-game-target="mobileScoreboardBackdrop"
         data-action="click->game#toggleScoreboard"></div>

    <div class="absolute top-0 right-0 h-full w-4/5 max-w-sm bg-black/95 backdrop-blur-md transform translate-x-full transition-transform duration-300 border-l border-white/10"
         data-game-target="mobileScoreboardPanel">
      <div class="p-4 border-b border-white/10 flex items-center justify-between">
        <h3 class="font-bold text-white"><%= t('game.play.scoreboard') %></h3>
        <button type="button" class="p-2 text-white/50 hover:text-white" data-action="click->game#toggleScoreboard">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div class="p-4 overflow-y-auto" style="max-height: calc(100vh - 80px);">
        <% current_game.leaderboard.each do |player| %>
          <div class="flex items-center justify-between py-3 border-b border-white/10 last:border-0
                      <%= 'bg-pink-500/10 rounded-lg px-2 -mx-2' if player.current_judge? %>">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white"
                   style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);">
                <%= player.avatar_initials %>
              </div>
              <div>
                <span class="font-medium text-white"><%= player.display_name %></span>
                <% if player.current_judge? %>
                  <span class="block text-xs text-pink-400">&#x1F451; Zar</span>
                <% end %>
              </div>
            </div>
            <span class="text-2xl font-bold text-cyan-400"><%= player.score %></span>
          </div>
        <% end %>

        <div class="mt-6 pt-4 border-t border-white/10">
          <p class="text-sm text-white/50 mb-4">
            Meta: <span class="text-cyan-400 font-bold"><%= current_game.points_to_win %></span> puntos
          </p>

          <%= button_to t('game.actions.leave_game'),
              leave_game_game_actions_path(current_game),
              method: :post,
              class: "w-full py-3 rounded-xl text-sm font-bold text-red-400 bg-red-500/10
                      border border-red-500/30 transition-all",
              data: { turbo_confirm: "Abandonar la partida?" } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Victory Modal (for game wins) -->
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4"
       style="display: none; background: rgba(0, 0, 0, 0.9);"
       data-game-target="victoryModal">
    <div class="w-full max-w-sm p-6 rounded-2xl text-center bg-gradient-to-b from-purple-500/20 to-black border border-purple-500/50"
         style="box-shadow: 0 0 60px rgba(168, 85, 247, 0.4);">
      <div class="text-2xl md:text-3xl font-bold text-white mb-4" data-game-target="victoryTitle"></div>
      <div class="rounded-xl overflow-hidden mb-6 border border-cyan-500/30" data-game-target="victoryGif"></div>
      <button type="button"
              class="w-full py-3 rounded-xl font-bold text-white bg-cyan-500 hover:bg-cyan-400 transition-all"
              data-action="click->game#closeVictory">
        Continuar
      </button>
    </div>
  </div>

  <!-- Round Winner Overlay -->
  <div class="hidden fixed inset-0 z-50 items-center justify-center p-4"
       style="background: rgba(0, 0, 0, 0.85); backdrop-filter: blur(8px);"
       data-game-target="winnerOverlay">
    <div class="w-full max-w-md text-center opacity-0 scale-90 transition-all duration-500"
         data-animate-in>

      <!-- Winner Badge -->
      <div class="mb-6">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full mb-4"
             style="background: linear-gradient(145deg, #fbbf24 0%, #f59e0b 100%);
                    box-shadow: 0 0 60px rgba(251, 191, 36, 0.6), 0 0 120px rgba(251, 191, 36, 0.3);">
          <span class="text-4xl">üèÜ</span>
        </div>
        <h2 class="text-2xl md:text-3xl font-bold text-white" data-game-target="winnerName">
          ¬°Ganador!
        </h2>
      </div>

      <!-- Winning Card -->
      <div class="mx-auto w-[200px] min-h-[260px] p-5 rounded-2xl flex flex-col justify-center"
           style="background: linear-gradient(145deg, rgba(251, 191, 36, 0.15) 0%, rgba(251, 191, 36, 0.05) 100%);
                  border: 2px solid #fbbf24;
                  box-shadow: 0 0 60px rgba(251, 191, 36, 0.4), 0 20px 50px rgba(0,0,0,0.5);"
           data-game-target="winnerCard">
        <!-- Content filled by JS -->
      </div>

      <!-- Countdown -->
      <div class="mt-8">
        <p class="text-white/50 text-sm mb-2">Siguiente ronda en</p>
        <div class="text-5xl font-bold text-cyan-400 transition-all duration-200 hidden"
             style="text-shadow: 0 0 30px rgba(34, 211, 238, 0.6);"
             data-game-target="countdown">
          3
        </div>
      </div>
    </div>
  </div>
</div>
