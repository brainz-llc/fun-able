<div class="min-h-screen -mt-16 pt-16 pb-24 lg:pb-6 relative overflow-hidden" data-controller="lobby" data-lobby-game-id-value="<%= current_game.id %>">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[400px] md:h-[400px] bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[300px] md:h-[300px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 max-w-5xl mx-auto px-4 lg:px-6 py-6 lg:py-8">
    <!-- Desktop: Horizontal layout with code on left, players/settings on right -->
    <div class="lg:grid lg:grid-cols-12 lg:gap-6">

      <!-- Left Column: Game Code & Share (desktop) / Full width header (mobile) -->
      <div class="lg:col-span-4 mb-6 lg:mb-0">
        <div class="text-center lg:text-left">
          <!-- Mobile only: Small logo -->
          <div class="lg:hidden mb-4">
            <h1 class="font-black tracking-tighter leading-none text-3xl">
              <span class="neon-pink">Fun</span><span class="neon-dash">-</span><span class="neon-pink neon-flicker-delayed">able</span>
            </h1>
            <p class="mt-1 text-sm text-white/50">Sala de espera</p>
          </div>

          <!-- Game Code Card -->
          <div class="inline-block lg:block cursor-pointer group active:scale-[0.98] transition-transform"
               data-action="click->lobby#copyCode"
               data-lobby-target="code">
            <div class="px-6 py-4 lg:px-5 lg:py-4 rounded-xl transition-all duration-300"
                 style="background: rgba(10, 10, 15, 0.9);
                        border: 2px solid rgba(236, 72, 153, 0.4);
                        box-shadow: 0 0 25px rgba(236, 72, 153, 0.2);">
              <p class="text-[10px] uppercase tracking-widest text-cyan-400/80 mb-2">Codigo de partida</p>
              <span class="font-mono text-3xl lg:text-4xl tracking-[0.25em] font-black block"
                    data-lobby-target="codeValue"
                    style="color: #f472b6; text-shadow: 0 0 15px rgba(236, 72, 153, 0.6);">
                <%= current_game.code %>
              </span>
            </div>
          </div>

          <p class="text-xs mt-2 text-white/40" data-lobby-target="copyFeedback">Toca para copiar</p>

          <!-- Share Button -->
          <button type="button"
                  data-action="click->lobby#shareGame"
                  class="mt-3 inline-flex items-center gap-2 px-5 py-2.5 rounded-lg font-semibold text-white text-sm transition-all duration-300 active:scale-95 hover:scale-[1.02]"
                  style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
                         box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
            Invitar
          </button>

          <!-- Desktop: Leave button under code -->
          <div class="hidden lg:block mt-4 pt-4 border-t border-white/5">
            <%= button_to leave_game_game_actions_path(current_game),
                method: :post,
                class: "w-full flex items-center justify-center gap-2 px-4 py-2.5 rounded-lg text-sm font-medium transition-all duration-300 text-white/40 hover:text-red-400 border border-white/10 hover:border-red-500/30",
                data: { turbo_confirm: "Seguro que quieres abandonar?" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Salir
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column: Players + Settings + Start Button -->
      <div class="lg:col-span-8 space-y-4">
        <!-- Players Section -->
        <div class="rounded-xl p-4"
             style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(255, 255, 255, 0.05);">
          <h2 class="text-sm font-medium mb-3 flex items-center justify-between">
            <span class="flex items-center gap-2">
              <span class="text-white/80">Jugadores</span>
              <span class="text-pink-400/80 text-xs">(<span data-lobby-target="playerCount"><%= current_game.player_count %></span>/<%= current_game.max_players %>)</span>
            </span>
            <% if current_game.player_count < 3 %>
              <span class="flex items-center gap-2 text-xs text-white/40">
                <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 animate-pulse"></span>
                Esperando...
              </span>
            <% else %>
              <span class="flex items-center gap-2 text-xs text-green-400">
                <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                Listo!
              </span>
            <% end %>
          </h2>

          <!-- Player Grid - Compact -->
          <div class="grid grid-cols-4 sm:grid-cols-5 lg:grid-cols-6 gap-2" data-lobby-target="playersList">
            <% @players.each do |player| %>
              <%= render 'games/lobby_player_avatar', player: player, show_kick: game_host? && player.user_id != current_user.id %>
            <% end %>

            <!-- Empty slots - Compact (show 2 extra for visual balance) -->
            <% (current_game.max_players - current_game.player_count + 2).times do |i| %>
              <div class="aspect-square rounded-lg flex flex-col items-center justify-center p-1 lobby-empty-slot"
                   style="background: rgba(15, 15, 15, 0.5); border: 1px dashed rgba(6, 182, 212, 0.2); animation-delay: <%= i * 0.15 %>s;">
                <div class="w-8 h-8 rounded-full flex items-center justify-center mb-1 lobby-empty-slot-icon"
                     style="background: rgba(6, 182, 212, 0.1);">
                  <svg class="w-4 h-4 text-cyan-400/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                </div>
                <span class="text-[10px] text-white/20">...</span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Settings Section - Compact -->
        <div class="rounded-xl overflow-hidden"
             style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(255, 255, 255, 0.05);">
          <details class="group" open>
            <summary class="lg:pointer-events-none flex items-center justify-between p-3 cursor-pointer select-none">
              <h2 class="text-sm font-medium text-white/80 flex items-center gap-2">
                <svg class="w-4 h-4 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                <%= t('game.lobby.settings') %>
              </h2>
              <svg class="w-4 h-4 lg:hidden transition-transform duration-300 group-open:rotate-180 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>

            <div class="px-3 pb-3">
              <% if game_host? %>
                <%= form_with url: update_settings_game_game_actions_path(current_game), method: :patch, data: { turbo_frame: "_top" } do |f| %>
                  <div class="flex items-end gap-2">
                    <!-- Deck -->
                    <div class="flex-1 min-w-0">
                      <label class="text-[10px] text-white/40 uppercase tracking-wide mb-1 block">Mazo</label>
                      <div class="relative">
                        <%= f.collection_select :deck_id, @decks, :id, :name, { selected: current_game.deck_id },
                            class: "lobby-select w-full pl-2.5 pr-7 py-1.5 rounded text-white text-xs transition-all cursor-pointer truncate",
                            style: "background: rgba(0, 0, 0, 0.5); border: 1px solid rgba(6, 182, 212, 0.3);" %>
                        <div class="absolute right-2 top-1/2 -translate-y-1/2 pointer-events-none">
                          <svg class="w-3.5 h-3.5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7" />
                          </svg>
                        </div>
                      </div>
                    </div>
                    <!-- Points -->
                    <div class="w-16">
                      <label class="text-[10px] text-white/40 uppercase tracking-wide mb-1 block">Puntos</label>
                      <%= f.number_field :points_to_win, value: current_game.points_to_win, min: 3, max: 20,
                          class: "w-full px-2 py-1.5 rounded text-white text-center text-xs font-bold focus:outline-none transition-all",
                          style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(250, 204, 21, 0.2);" %>
                    </div>
                    <!-- Timer -->
                    <div class="w-14">
                      <label class="text-[10px] text-white/40 uppercase tracking-wide mb-1 block">Tiempo</label>
                      <%= f.number_field :turn_timer, value: current_game.turn_timer, min: 30, max: 180, step: 10,
                          class: "w-full px-2 py-1.5 rounded text-white text-center text-xs font-bold focus:outline-none transition-all",
                          style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
                    </div>
                    <!-- Max Players -->
                    <div class="w-14">
                      <label class="text-[10px] text-white/40 uppercase tracking-wide mb-1 block">Max</label>
                      <%= f.number_field :max_players, value: current_game.max_players, min: 3, max: 20,
                          class: "w-full px-2 py-1.5 rounded text-white text-center text-xs font-bold focus:outline-none transition-all",
                          style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(34, 197, 94, 0.2);" %>
                    </div>
                    <!-- Save button - small and subtle -->
                    <%= f.submit "OK", class: "px-3 py-1.5 rounded text-xs font-medium text-white/60 hover:text-white transition-all cursor-pointer", style: "background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.1);" %>
                  </div>
                <% end %>
              <% else %>
                <!-- Read-only for non-hosts - inline compact -->
                <div class="flex flex-wrap items-center gap-3 text-xs">
                  <div class="flex items-center gap-1.5">
                    <span class="text-white/40">Mazo:</span>
                    <span class="text-cyan-400 font-medium truncate max-w-[100px]"><%= current_game.deck&.name || "â€”" %></span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="text-white/40">Pts:</span>
                    <span class="text-yellow-400 font-bold"><%= current_game.points_to_win %></span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="text-white/40">Tiempo:</span>
                    <span class="text-purple-400 font-bold"><%= current_game.turn_timer %>s</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span class="text-white/40">Max:</span>
                    <span class="text-green-400 font-bold"><%= current_game.max_players %></span>
                  </div>
                </div>
              <% end %>
            </div>
          </details>
        </div>

        <!-- Desktop Start Button - Right here, not at the bottom! -->
        <div class="hidden lg:block">
          <% if game_host? %>
            <%= button_to t('game.lobby.start_game'),
                start_game_game_actions_path(current_game),
                method: :post,
                class: "w-full py-4 rounded-xl font-bold text-lg text-white transition-all duration-300 hover:scale-[1.01] disabled:opacity-40 disabled:cursor-not-allowed disabled:hover:scale-100",
                style: current_game.can_start? ? "background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 30px rgba(236, 72, 153, 0.4);" : "background: rgba(60, 60, 60, 0.5);",
                disabled: !current_game.can_start?,
                data: { turbo_confirm: "Iniciar la partida?" } %>
          <% else %>
            <div class="text-center py-3 rounded-xl"
                 style="background: rgba(10, 10, 15, 0.6); border: 1px solid rgba(6, 182, 212, 0.15);">
              <div class="flex items-center justify-center gap-2">
                <span class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></span>
                <span class="text-cyan-400/80 text-sm">Esperando que el anfitrion inicie...</span>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Mobile Leave button -->
        <div class="lg:hidden">
          <%= button_to leave_game_game_actions_path(current_game),
              method: :post,
              class: "w-full flex items-center justify-center gap-2 px-4 py-3 rounded-xl font-medium transition-all text-white/40 active:scale-[0.98] border border-white/10",
              data: { turbo_confirm: "Seguro que quieres abandonar?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <%= t('game.actions.leave_game') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Fixed Bottom Start Button - Mobile only -->
  <div class="fixed bottom-0 left-0 right-0 p-4 lg:hidden z-50"
       style="background: linear-gradient(to top, rgba(5, 5, 10, 0.98) 0%, rgba(5, 5, 10, 0.9) 70%, transparent 100%);">
    <% if game_host? %>
      <%= button_to t('game.lobby.start_game'),
          start_game_game_actions_path(current_game),
          method: :post,
          class: "w-full py-4 rounded-2xl font-bold text-lg text-white transition-all duration-300 active:scale-[0.98] disabled:opacity-40 disabled:cursor-not-allowed",
          style: current_game.can_start? ? "background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 40px rgba(236, 72, 153, 0.5);" : "background: rgba(60, 60, 60, 0.5);",
          disabled: !current_game.can_start?,
          data: { turbo_confirm: "Iniciar la partida?" } %>
    <% else %>
      <div class="text-center py-4 rounded-2xl"
           style="background: rgba(10, 10, 15, 0.9); border: 1px solid rgba(6, 182, 212, 0.2);">
        <div class="flex items-center justify-center gap-3">
          <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
          <p class="text-cyan-400/80 text-sm">Esperando al anfitrion...</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
