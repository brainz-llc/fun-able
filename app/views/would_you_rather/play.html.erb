<% content_for :title, "Que Prefieres - Ronda #{@game.current_round}" %>
<% content_for :hide_footer, true %>

<%
  card = @game.current_card
  has_voted = @current_player&.voted_for_round?(@game.current_round)
  is_revealing = @game.phase == 'revealing'
  votes = @game.votes_for_current_round
  option_a_count = votes.option_a.count
  option_b_count = votes.option_b.count
  total_votes = option_a_count + option_b_count
  option_a_percent = total_votes > 0 ? ((option_a_count.to_f / total_votes) * 100).round : 50
  option_b_percent = total_votes > 0 ? ((option_b_count.to_f / total_votes) * 100).round : 50
  minority_choice = if option_a_count < option_b_count then 'a' elsif option_b_count < option_a_count then 'b' else nil end
%>

<div class="min-h-screen relative overflow-hidden"
     data-controller="would-you-rather"
     data-would-you-rather-game-id-value="<%= @game.id %>"
     data-would-you-rather-player-id-value="<%= @current_player&.id %>"
     data-would-you-rather-is-host-value="<%= @game.host?(current_user) %>"
     data-would-you-rather-has-voted-value="<%= has_voted %>"
     data-would-you-rather-phase-value="<%= @game.phase %>">

  <!-- Animated Background -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-96 h-96 md:w-[600px] md:h-[600px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Top Bar -->
  <div class="relative z-20 px-4 py-3 bg-black/60 backdrop-blur-xl border-b border-white/5">
    <div class="flex items-center justify-between">
      <!-- Round Counter -->
      <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg"
           style="background: linear-gradient(135deg, rgba(236, 72, 153, 0.15) 0%, rgba(168, 85, 247, 0.1) 100%);
                  border: 1px solid rgba(236, 72, 153, 0.2);"
           data-would-you-rather-target="roundInfo">
        <span class="text-[10px] uppercase tracking-wider text-pink-400/70">Ronda</span>
        <span class="text-lg font-black text-white" style="text-shadow: 0 0 10px rgba(236, 72, 153, 0.4);">
          <%= @game.current_round %>/<%= @game.max_rounds %>
        </span>
      </div>

      <!-- Timer -->
      <% unless is_revealing %>
        <div class="px-5 py-2 rounded-xl"
             style="background: linear-gradient(145deg, rgba(6, 182, 212, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
                    border: 1px solid rgba(6, 182, 212, 0.25);
                    box-shadow: 0 0 20px rgba(6, 182, 212, 0.1);">
          <span class="text-2xl md:text-3xl font-mono font-black text-cyan-400 tabular-nums"
                data-would-you-rather-target="timer"
                data-voting-ends-at="<%= @game.voting_ends_at&.iso8601 %>"
                style="text-shadow: 0 0 15px rgba(6, 182, 212, 0.6), 0 0 30px rgba(6, 182, 212, 0.3);">
            30
          </span>
        </div>
      <% end %>

      <!-- Vote Count -->
      <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-white/5 border border-white/10">
        <span class="text-white/60 text-sm">Votos:</span>
        <span class="font-bold text-cyan-400" data-would-you-rather-target="voteCount">
          <%= votes.count %>/<%= @game.active_players.count %>
        </span>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 py-6">
    <% if card %>
      <!-- Category Badge -->
      <div class="text-center mb-6">
        <span class="inline-block px-4 py-1 rounded-full text-xs font-bold uppercase tracking-wider"
              style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(168, 85, 247, 0.1));
                     border: 1px solid rgba(168, 85, 247, 0.3);
                     color: #c084fc;">
          <%= card.category %>
        </span>
      </div>

      <!-- Question -->
      <div class="text-center mb-8">
        <h2 class="text-2xl md:text-3xl font-black text-white mb-2">Que prefieres?</h2>
      </div>

      <!-- Options -->
      <div class="grid md:grid-cols-2 gap-4 md:gap-6 mb-8">
        <!-- Option A (Pink) -->
        <button type="button"
                class="group relative p-6 md:p-8 rounded-2xl text-left transition-all duration-300 <%= has_voted || is_revealing ? 'pointer-events-none' : 'cursor-pointer hover:scale-[1.02]' %>"
                style="background: linear-gradient(145deg, rgba(236, 72, 153, 0.1) 0%, rgba(236, 72, 153, 0.05) 100%);
                       border: 2px solid rgba(236, 72, 153, 0.3);
                       box-shadow: 0 0 30px rgba(236, 72, 153, 0.1);"
                data-would-you-rather-target="optionA"
                data-choice="a"
                data-action="click->would-you-rather#vote">
          <div class="absolute top-4 left-4 w-8 h-8 rounded-full flex items-center justify-center text-sm font-black"
               style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
                      box-shadow: 0 0 15px rgba(236, 72, 153, 0.5);">
            A
          </div>
          <div class="pt-8">
            <p class="text-lg md:text-xl font-bold text-white leading-relaxed">
              <%= card.option_a %>
            </p>
          </div>

          <% if is_revealing %>
            <!-- Results Bar -->
            <div class="mt-6 pt-4 border-t border-pink-500/20">
              <div class="flex items-center justify-between mb-2">
                <span class="text-pink-400 font-bold text-2xl" data-would-you-rather-target="percentageA">
                  <%= option_a_percent %>%
                </span>
                <span class="text-white/50 text-sm"><%= option_a_count %> votos</span>
              </div>
              <div class="h-3 rounded-full bg-black/30 overflow-hidden">
                <div class="h-full rounded-full transition-all duration-1000"
                     style="width: <%= option_a_percent %>%; background: linear-gradient(90deg, #ec4899, #db2777);"></div>
              </div>
              <% if minority_choice == 'a' %>
                <div class="mt-3 text-center">
                  <span class="inline-block px-3 py-1 rounded-full text-xs font-bold bg-red-500/20 text-red-400 border border-red-500/30">
                    MINORIA - A BEBER!
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        </button>

        <!-- VS Divider (Mobile) -->
        <div class="md:hidden flex items-center justify-center">
          <span class="px-4 py-2 rounded-full text-lg font-black"
                style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(168, 85, 247, 0.1));
                       border: 1px solid rgba(168, 85, 247, 0.3);
                       color: #a855f7;
                       text-shadow: 0 0 10px rgba(168, 85, 247, 0.5);">
            VS
          </span>
        </div>

        <!-- Option B (Cyan) -->
        <button type="button"
                class="group relative p-6 md:p-8 rounded-2xl text-left transition-all duration-300 <%= has_voted || is_revealing ? 'pointer-events-none' : 'cursor-pointer hover:scale-[1.02]' %>"
                style="background: linear-gradient(145deg, rgba(6, 182, 212, 0.1) 0%, rgba(6, 182, 212, 0.05) 100%);
                       border: 2px solid rgba(6, 182, 212, 0.3);
                       box-shadow: 0 0 30px rgba(6, 182, 212, 0.1);"
                data-would-you-rather-target="optionB"
                data-choice="b"
                data-action="click->would-you-rather#vote">
          <div class="absolute top-4 left-4 w-8 h-8 rounded-full flex items-center justify-center text-sm font-black"
               style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
                      box-shadow: 0 0 15px rgba(6, 182, 212, 0.5);">
            B
          </div>
          <div class="pt-8">
            <p class="text-lg md:text-xl font-bold text-white leading-relaxed">
              <%= card.option_b %>
            </p>
          </div>

          <% if is_revealing %>
            <!-- Results Bar -->
            <div class="mt-6 pt-4 border-t border-cyan-500/20">
              <div class="flex items-center justify-between mb-2">
                <span class="text-cyan-400 font-bold text-2xl" data-would-you-rather-target="percentageB">
                  <%= option_b_percent %>%
                </span>
                <span class="text-white/50 text-sm"><%= option_b_count %> votos</span>
              </div>
              <div class="h-3 rounded-full bg-black/30 overflow-hidden">
                <div class="h-full rounded-full transition-all duration-1000"
                     style="width: <%= option_b_percent %>%; background: linear-gradient(90deg, #06b6d4, #0891b2);"></div>
              </div>
              <% if minority_choice == 'b' %>
                <div class="mt-3 text-center">
                  <span class="inline-block px-3 py-1 rounded-full text-xs font-bold bg-red-500/20 text-red-400 border border-red-500/30">
                    MINORIA - A BEBER!
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        </button>
      </div>

      <!-- VS Divider (Desktop) - Positioned in center -->
      <div class="hidden md:flex absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-20">
        <span class="px-5 py-3 rounded-full text-xl font-black"
              style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.3), rgba(168, 85, 247, 0.1));
                     border: 2px solid rgba(168, 85, 247, 0.4);
                     color: #a855f7;
                     text-shadow: 0 0 15px rgba(168, 85, 247, 0.6);
                     box-shadow: 0 0 30px rgba(168, 85, 247, 0.3);">
          VS
        </span>
      </div>

      <!-- Status Messages -->
      <% if has_voted && !is_revealing %>
        <div class="text-center mb-6">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full"
               style="background: linear-gradient(135deg, rgba(34, 197, 94, 0.15), rgba(34, 197, 94, 0.05));
                      border: 1px solid rgba(34, 197, 94, 0.3);">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-green-400 font-bold">Voto registrado - esperando a los demas...</span>
          </div>
        </div>
      <% end %>

      <% if is_revealing %>
        <!-- Minority Message -->
        <div class="text-center mb-6" data-would-you-rather-target="minorityMessage">
          <% if minority_choice.nil? %>
            <div class="inline-flex items-center gap-2 px-6 py-3 rounded-full"
                 style="background: linear-gradient(135deg, rgba(251, 191, 36, 0.15), rgba(251, 191, 36, 0.05));
                        border: 1px solid rgba(251, 191, 36, 0.3);">
              <span class="text-2xl">ü§ù</span>
              <span class="text-yellow-400 font-bold text-lg">Empate! Nadie bebe esta ronda.</span>
            </div>
          <% else %>
            <div class="inline-flex items-center gap-2 px-6 py-3 rounded-full"
                 style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(239, 68, 68, 0.05));
                        border: 1px solid rgba(239, 68, 68, 0.3);">
              <span class="text-2xl">üç∫</span>
              <span class="text-red-400 font-bold text-lg">La minoria eligio <%= minority_choice == 'a' ? 'A' : 'B' %>. A beber!</span>
            </div>
          <% end %>
        </div>

        <!-- Next Round Button (Host Only) -->
        <% if @game.host?(current_user) %>
          <div class="text-center" data-would-you-rather-target="nextRoundBtn">
            <% if @game.current_round >= @game.max_rounds %>
              <%= button_to "Ver Resultados Finales", next_round_would_you_rather_path(@game), method: :post, class: "px-8 py-4 rounded-xl font-bold text-white text-lg cursor-pointer transition-all hover:scale-105", style: "background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%); box-shadow: 0 0 20px rgba(236, 72, 153, 0.4);" %>
            <% else %>
              <button type="button"
                      data-action="click->would-you-rather#nextRound"
                      class="px-8 py-4 rounded-xl font-bold text-white text-lg cursor-pointer transition-all hover:scale-105"
                      style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 20px rgba(6, 182, 212, 0.4);">
                Siguiente Ronda
              </button>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-white/50">
            Esperando a que el anfitrion continue...
          </div>
        <% end %>
      <% end %>
    <% end %>

    <!-- Leaderboard -->
    <div class="mt-8 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 p-4">
      <h3 class="text-lg font-bold text-white mb-4">Tabla de Posiciones</h3>
      <div class="space-y-2" data-would-you-rather-target="leaderboard">
        <% @game.leaderboard.each_with_index do |player, idx| %>
          <div class="flex items-center justify-between py-2 px-3 rounded-lg <%= idx == 0 ? 'bg-yellow-500/10 border border-yellow-500/30' : 'bg-white/5' %>"
               data-player-id="<%= player.id %>">
            <div class="flex items-center gap-2">
              <span class="text-sm font-bold text-white/50">#<%= idx + 1 %></span>
              <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold text-white"
                   style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);">
                <%= player.avatar_initials %>
              </div>
              <span class="text-sm font-medium text-white"><%= player.display_name %></span>
              <% if player.id == @current_player&.id %>
                <span class="text-xs text-purple-400">(tu)</span>
              <% end %>
            </div>
            <div class="flex items-center gap-3">
              <% if player.current_streak > 0 %>
                <span class="text-xs text-cyan-400"><%= player.current_streak %> üî•</span>
              <% end %>
              <span class="text-sm font-bold <%= player.drinks_taken > 0 ? 'text-pink-400' : 'text-green-400' %>">
                <%= player.drinks_taken %> üç∫
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Leave Button -->
    <div class="mt-6 text-center">
      <%= button_to "Abandonar Partida", leave_would_you_rather_path(@game), method: :post, class: "text-red-400 hover:text-red-300 text-sm", data: { turbo_confirm: "Abandonar la partida?" } %>
    </div>
  </div>

  <!-- Drink Animation Overlay -->
  <div class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/70 backdrop-blur-sm"
       data-would-you-rather-target="drinkAnimation">
    <div class="text-center animate-bounce">
      <span class="text-8xl">üç∫</span>
      <p class="text-2xl font-bold text-white mt-4">A BEBER!</p>
    </div>
  </div>

  <!-- Results Overlay (for WebSocket updates) -->
  <div class="hidden fixed inset-0 z-40 bg-black/50 backdrop-blur-sm"
       data-would-you-rather-target="resultOverlay">
  </div>
</div>
