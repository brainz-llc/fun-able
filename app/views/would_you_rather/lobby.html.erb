<% content_for :title, "Lobby - Que Prefieres" %>
<% content_for :hide_footer, true %>

<div class="min-h-screen relative overflow-hidden"
     data-controller="would-you-rather"
     data-would-you-rather-game-id-value="<%= @game.id %>"
     data-would-you-rather-player-id-value="<%= @current_player&.id %>"
     data-would-you-rather-is-host-value="<%= @game.host?(current_user) %>">

  <!-- Animated Background -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="relative z-10 max-w-2xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-white mb-2">Que Prefieres?</h1>
      <p class="text-white/60">Esperando jugadores...</p>
    </div>

    <!-- Game Code -->
    <div class="text-center mb-8">
      <p class="text-white/50 text-sm mb-2">Codigo de partida</p>
      <div class="inline-block px-8 py-4 rounded-2xl font-mono text-4xl font-black tracking-widest"
           style="background: linear-gradient(145deg, rgba(236, 72, 153, 0.1), rgba(6, 182, 212, 0.1));
                  border: 2px solid rgba(236, 72, 153, 0.3);
                  color: #ec4899;
                  text-shadow: 0 0 20px rgba(236, 72, 153, 0.5);">
        <%= @game.code %>
      </div>
      <p class="text-white/40 text-xs mt-2">Comparte este codigo con tus amigos</p>
    </div>

    <!-- Settings -->
    <div class="bg-white/5 backdrop-blur-sm rounded-xl border border-white/10 p-4 mb-6">
      <div class="flex items-center justify-between">
        <span class="text-white/60 text-sm">Rondas</span>
        <span class="text-cyan-400 font-bold"><%= @game.max_rounds %></span>
      </div>
    </div>

    <!-- Players List -->
    <div class="mb-8">
      <h2 class="text-lg font-bold text-white mb-4">Jugadores (<%= @players.count %>)</h2>
      <div class="space-y-2">
        <% @players.each do |player| %>
          <div class="flex items-center justify-between p-4 rounded-xl bg-white/5 border border-white/10"
               data-player-id="<%= player.id %>">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white"
                   style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);">
                <%= player.avatar_initials %>
              </div>
              <div>
                <span class="text-white font-medium"><%= player.display_name %></span>
                <% if player.host? %>
                  <span class="ml-2 text-xs text-pink-400">Anfitrion</span>
                <% end %>
              </div>
            </div>
            <% if player.connected? %>
              <span class="w-2 h-2 rounded-full bg-green-500"></span>
            <% else %>
              <span class="w-2 h-2 rounded-full bg-yellow-500 animate-pulse"></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="space-y-3">
      <% if @game.host?(current_user) %>
        <% if @game.can_start? %>
          <%= button_to "Iniciar Juego", start_would_you_rather_path(@game), method: :post, class: "w-full py-4 rounded-xl font-bold text-white text-lg cursor-pointer transition-all hover:scale-[1.02]", style: "background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 50%, #06b6d4 100%); box-shadow: 0 0 20px rgba(236, 72, 153, 0.3);" %>
        <% else %>
          <button disabled class="w-full py-4 rounded-xl font-bold text-white/50 text-lg bg-white/10 cursor-not-allowed">
            Necesitas al menos 2 jugadores
          </button>
        <% end %>
      <% else %>
        <div class="text-center py-4 text-white/50">
          Esperando a que el anfitrion inicie el juego...
        </div>
      <% end %>

      <%= button_to "Abandonar", leave_would_you_rather_path(@game), method: :post, class: "w-full py-3 rounded-xl font-bold text-red-400 border border-red-500/30 bg-red-500/10 cursor-pointer transition-all hover:bg-red-500/20", data: { turbo_confirm: "Abandonar la partida?" } %>
    </div>
  </div>
</div>
