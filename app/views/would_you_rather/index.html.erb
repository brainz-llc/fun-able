<% content_for :title, "Que Prefieres - Decisiones Imposibles" %>

<div class="min-h-screen -mt-16 pt-16 relative">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <!-- Pink blob - left side -->
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] lg:w-[700px] lg:h-[700px] bg-pink-500/20 md:bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <!-- Cyan blob - right side -->
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[600px] md:h-[600px] lg:w-[800px] lg:h-[800px] bg-cyan-500/15 md:bg-cyan-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <!-- Purple blob - center/bottom -->
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[400px] md:h-[400px] lg:w-[600px] lg:h-[600px] bg-purple-500/10 md:bg-purple-500/8 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <!-- Extra glow for desktop - bottom corners -->
    <div class="hidden md:block absolute bottom-0 left-0 -translate-x-1/3 translate-y-1/3 w-[400px] h-[400px] lg:w-[500px] lg:h-[500px] bg-pink-600/10 rounded-full blur-3xl"></div>
    <div class="hidden md:block absolute bottom-0 right-0 translate-x-1/3 translate-y-1/3 w-[400px] h-[400px] lg:w-[500px] lg:h-[500px] bg-cyan-600/10 rounded-full blur-3xl"></div>
  </div>

  <!-- Hero Section -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-[85vh] px-6 text-center">

    <!-- Floating VS Cards Preview (top on mobile, bottom on desktop) -->
    <div class="relative w-full max-w-sm md:max-w-6xl h-44 md:h-72 mb-6 md:mb-0 md:mt-10 order-1 md:order-3">

      <!-- Option A Card (Pink - Left) -->
      <div class="absolute top-1/2 -translate-y-1/2 rotate-[-12deg] transition-transform hover:rotate-0 hover:scale-110 duration-300"
           style="left: 5%; width: 130px; height: 175px;">
        <div class="w-full h-full md:w-[160px] md:h-[210px] rounded-xl p-3 md:p-4 md:absolute md:left-[80px] flex flex-col justify-between"
             style="background: linear-gradient(145deg, #1a1a1a 0%, #0f0f0f 100%); border: 2px solid rgba(236, 72, 153, 0.5); box-shadow: 0 0 30px rgba(236, 72, 153, 0.3), 0 15px 30px rgba(0,0,0,0.4);">
          <div class="text-pink-400 text-xs font-bold uppercase tracking-wider">Opcion A</div>
          <p class="text-white text-xs md:text-sm leading-relaxed font-medium">Nunca poder mentir</p>
          <div class="w-full h-1 rounded-full bg-gradient-to-r from-pink-500 to-pink-400"></div>
        </div>
      </div>

      <!-- VS Badge (Center) -->
      <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 -rotate-3 transition-transform hover:rotate-0 hover:scale-110 duration-300 z-10"
           style="width: 80px; height: 80px;">
        <div class="w-full h-full md:w-[100px] md:h-[100px] rounded-full flex items-center justify-center"
             style="background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%); border: 3px solid rgba(168, 85, 247, 0.6); box-shadow: 0 0 40px rgba(168, 85, 247, 0.4), 0 20px 40px rgba(0,0,0,0.5);">
          <span class="text-3xl md:text-4xl font-black bg-gradient-to-r from-pink-400 via-purple-400 to-cyan-400 bg-clip-text text-transparent">O</span>
        </div>
      </div>

      <!-- Option B Card (Cyan - Right) -->
      <div class="absolute top-1/2 -translate-y-1/2 rotate-[10deg] transition-transform hover:rotate-0 hover:scale-110 duration-300"
           style="right: 5%; width: 130px; height: 175px;">
        <div class="w-full h-full md:w-[160px] md:h-[210px] rounded-xl p-3 md:p-4 md:absolute md:right-[80px] flex flex-col justify-between"
             style="background: linear-gradient(145deg, #1a1a1a 0%, #0f0f0f 100%); border: 2px solid rgba(6, 182, 212, 0.5); box-shadow: 0 0 30px rgba(6, 182, 212, 0.3), 0 15px 30px rgba(0,0,0,0.4);">
          <div class="text-cyan-400 text-xs font-bold uppercase tracking-wider">Opcion B</div>
          <p class="text-white text-xs md:text-sm leading-relaxed font-medium">Nunca saber la verdad</p>
          <div class="w-full h-1 rounded-full bg-gradient-to-r from-cyan-400 to-cyan-500"></div>
        </div>
      </div>

      <!-- Desktop Only: Extra Card (far left) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[-18deg] transition-transform hover:rotate-0 hover:scale-105 duration-300"
           style="left: 2%; width: 140px; height: 180px;">
        <div class="w-full h-full rounded-xl p-3"
             style="background: linear-gradient(145deg, #151515 0%, #0a0a0a 100%); border: 1px solid rgba(236, 72, 153, 0.3); box-shadow: 0 10px 25px rgba(0,0,0,0.4);">
          <div class="text-pink-400/70 text-[10px] font-bold uppercase">A</div>
          <p class="text-white/80 text-xs leading-relaxed mt-2">Ser invisible para todos</p>
        </div>
      </div>

      <!-- Desktop Only: Extra Card (far right) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[15deg] transition-transform hover:rotate-0 hover:scale-105 duration-300"
           style="right: 2%; width: 140px; height: 180px;">
        <div class="w-full h-full rounded-xl p-3"
             style="background: linear-gradient(145deg, #151515 0%, #0a0a0a 100%); border: 1px solid rgba(6, 182, 212, 0.3); box-shadow: 0 10px 25px rgba(0,0,0,0.4);">
          <div class="text-cyan-400/70 text-[10px] font-bold uppercase">B</div>
          <p class="text-white/80 text-xs leading-relaxed mt-2">Poder leer mentes</p>
        </div>
      </div>

      <!-- Desktop Only: Extra Card (left of center) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[-8deg] transition-transform hover:rotate-0 hover:scale-105 duration-300 z-[5]"
           style="left: 28%; width: 140px; height: 180px;">
        <div class="w-full h-full rounded-xl p-3 flex flex-col justify-between"
             style="background: #0f0f0f; border: 1px solid rgba(236, 72, 153, 0.25); box-shadow: 0 15px 30px rgba(0,0,0,0.4);">
          <div class="text-pink-400/50 text-[10px] font-bold uppercase">A</div>
          <p class="text-white/70 text-xs leading-relaxed">Vivir 200 a√±os solo</p>
        </div>
      </div>

      <!-- Desktop Only: Extra Card (right of center) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[6deg] transition-transform hover:rotate-0 hover:scale-105 duration-300 z-[5]"
           style="right: 28%; width: 140px; height: 180px;">
        <div class="w-full h-full rounded-xl p-3 flex flex-col justify-between"
             style="background: #0f0f0f; border: 1px solid rgba(6, 182, 212, 0.25); box-shadow: 0 15px 30px rgba(0,0,0,0.4);">
          <div class="text-cyan-400/50 text-[10px] font-bold uppercase">B</div>
          <p class="text-white/70 text-xs leading-relaxed">Revivir 5 veces</p>
        </div>
      </div>
    </div>

    <!-- Logo / Title -->
    <div class="mb-6 order-2 md:order-1">
      <h1 class="font-black tracking-tighter leading-none neon-sign" style="font-size: clamp(3.5rem, 15vw, 6rem);">
        <span class="neon-pink">Que</span><span class="neon-dash"> </span><span class="neon-cyan neon-flicker-delayed">Prefieres</span>
      </h1>
      <p class="mt-3 text-lg md:text-xl text-white/60 font-light tracking-wide">Decisiones imposibles, risas garantizadas</p>
    </div>

    <!-- Action Buttons -->
    <div class="w-full max-w-md space-y-5 order-3 md:order-2">
      <!-- Create Game Button -->
      <%= link_to new_would_you_rather_path, class: "group block w-full" do %>
        <!-- Mobile Layout - Gradient neon style -->
        <div class="md:hidden flex items-center justify-center gap-4 py-5 px-8 rounded-2xl transition-all duration-300 active:scale-[0.98]"
             style="background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 50%, #06b6d4 100%); box-shadow: 0 0 40px rgba(168, 85, 247, 0.5);">
          <div class="w-12 h-12 rounded-full bg-white/15 flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          <div class="text-left">
            <span class="block text-xl font-black text-white tracking-wide">Crear Partida</span>
            <span class="block text-sm text-white/70">Invita a tus amigos</span>
          </div>
        </div>

        <!-- Desktop Layout - Purple border -->
        <div class="hidden md:flex items-center justify-center gap-3 py-4 px-8 rounded-xl border border-purple-500/50 hover:border-purple-500 hover:bg-purple-500/10 transition-all duration-300">
          <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
          <span class="text-lg font-medium text-white">Crear Partida</span>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="flex items-center gap-4">
        <div class="flex-1 h-px bg-gradient-to-r from-transparent via-pink-500/30 to-transparent"></div>
        <span class="text-white/40 text-sm font-medium">o unete con codigo</span>
        <div class="flex-1 h-px bg-gradient-to-r from-transparent via-cyan-500/30 to-transparent"></div>
      </div>

      <!-- Join Game -->
      <%= form_with url: join_by_code_would_you_rather_index_path, method: :post, class: "w-full" do %>
        <div class="relative">
          <input type="text"
                 name="code"
                 placeholder="ABC123"
                 maxlength="6"
                 class="w-full text-center uppercase tracking-[0.5em] font-mono text-2xl md:text-xl py-4 md:py-3 rounded-2xl md:rounded-xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-purple-400/50 md:focus:ring-white/30 placeholder:text-white/20"
                 style="background: rgba(10, 10, 15, 0.9); border: 2px solid rgba(168, 85, 247, 0.3); color: #c084fc; letter-spacing: 0.5em;"
                 autocomplete="off">
          <!-- Mobile: Gradient button -->
          <button type="submit" class="md:hidden absolute right-2 top-1/2 -translate-y-1/2 w-12 h-12 rounded-xl flex items-center justify-center text-white transition-all duration-300 hover:scale-110 active:scale-95"
                  style="background: linear-gradient(135deg, #a855f7 0%, #7c3aed 100%); box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
          <!-- Desktop: Simple button -->
          <button type="submit" class="hidden md:flex absolute right-2 top-1/2 -translate-y-1/2 w-10 h-10 rounded-lg items-center justify-center text-white/60 hover:text-white hover:bg-white/10 transition-all duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
        </div>
      <% end %>
    </div>

  </div>

  <!-- Scroll indicator (below hero) -->
  <div class="flex justify-center py-4 animate-bounce">
    <svg class="w-6 h-6 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>

  <!-- How to Play - Animated Demo Section -->
  <div class="relative z-10 py-12 pb-20 md:py-20 px-4" data-controller="wyr-demo">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-4 text-white">Como Jugar</h2>

    <!-- Phase Indicator -->
    <p class="text-center text-lg md:text-xl font-medium mb-8 h-8 text-purple-400"
       data-wyr-demo-target="phaseIndicator">
      Aparece el dilema
    </p>

    <!-- Demo Container -->
    <div class="relative max-w-3xl mx-auto h-[500px] md:h-[520px] overflow-hidden">

      <!-- Step 1: Dilemma Cards Appear -->
      <div class="absolute inset-0 flex items-start justify-center pt-8 opacity-0 transition-all duration-700"
           data-wyr-demo-target="step1">

        <!-- VS Layout -->
        <div class="relative w-full flex items-center justify-center gap-4 md:gap-8">

          <!-- Option A -->
          <div class="w-36 md:w-48 h-48 md:h-64 rounded-xl p-4 flex flex-col justify-between transition-all duration-500 -translate-x-full opacity-0"
               data-wyr-demo-target="optionA"
               style="background: linear-gradient(145deg, #1a1a1a 0%, #0f0f0f 100%); border: 2px solid rgba(236, 72, 153, 0.5); box-shadow: 0 0 30px rgba(236, 72, 153, 0.3), 0 15px 30px rgba(0,0,0,0.4);">
            <div class="text-pink-400 text-xs md:text-sm font-bold uppercase tracking-wider">Opcion A</div>
            <p class="text-white text-sm md:text-lg leading-relaxed font-medium flex-grow flex items-center">Tener wifi gratis de por vida</p>
            <div class="w-full h-1 rounded-full bg-gradient-to-r from-pink-500 to-pink-400"></div>
          </div>

          <!-- VS Badge -->
          <div class="flex-shrink-0 scale-0 opacity-0 transition-all duration-500"
               data-wyr-demo-target="vsBadge">
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-r from-pink-500 via-purple-500 to-cyan-500 rounded-full blur-lg opacity-60 animate-pulse"></div>
              <div class="relative w-14 h-14 md:w-20 md:h-20 rounded-full flex items-center justify-center"
                   style="background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%); border: 3px solid rgba(168, 85, 247, 0.6);">
                <span class="text-xl md:text-3xl font-black bg-gradient-to-r from-pink-400 via-purple-400 to-cyan-400 bg-clip-text text-transparent">O</span>
              </div>
            </div>
          </div>

          <!-- Option B -->
          <div class="w-36 md:w-48 h-48 md:h-64 rounded-xl p-4 flex flex-col justify-between transition-all duration-500 translate-x-full opacity-0"
               data-wyr-demo-target="optionB"
               style="background: linear-gradient(145deg, #1a1a1a 0%, #0f0f0f 100%); border: 2px solid rgba(6, 182, 212, 0.5); box-shadow: 0 0 30px rgba(6, 182, 212, 0.3), 0 15px 30px rgba(0,0,0,0.4);">
            <div class="text-cyan-400 text-xs md:text-sm font-bold uppercase tracking-wider">Opcion B</div>
            <p class="text-white text-sm md:text-lg leading-relaxed font-medium flex-grow flex items-center">Comida gratis de por vida</p>
            <div class="w-full h-1 rounded-full bg-gradient-to-r from-cyan-400 to-cyan-500"></div>
          </div>
        </div>
      </div>

      <!-- Step 2: Voting Animation -->
      <div class="absolute bottom-32 left-1/2 -translate-x-1/2 w-full max-w-md opacity-0 transition-all duration-500"
           data-wyr-demo-target="step2">

        <!-- Player Vote Indicators -->
        <div class="flex justify-center gap-3 md:gap-6">
          <!-- Player 1 - Votes A -->
          <div class="flex flex-col items-center gap-2 opacity-0 -translate-y-4 transition-all duration-300"
               data-wyr-demo-target="voter1">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center text-white font-bold text-sm"
                 style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 15px rgba(236, 72, 153, 0.4);">
              P1
            </div>
            <div class="w-2 h-2 rounded-full bg-pink-500 animate-pulse"></div>
          </div>

          <!-- Player 2 - Votes B -->
          <div class="flex flex-col items-center gap-2 opacity-0 -translate-y-4 transition-all duration-300"
               data-wyr-demo-target="voter2">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center text-white font-bold text-sm"
                 style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 15px rgba(6, 182, 212, 0.4);">
              P2
            </div>
            <div class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse"></div>
          </div>

          <!-- Player 3 - Votes A -->
          <div class="flex flex-col items-center gap-2 opacity-0 -translate-y-4 transition-all duration-300"
               data-wyr-demo-target="voter3">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center text-white font-bold text-sm"
                 style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 15px rgba(236, 72, 153, 0.4);">
              P3
            </div>
            <div class="w-2 h-2 rounded-full bg-pink-500 animate-pulse"></div>
          </div>

          <!-- Player 4 - Votes A -->
          <div class="flex flex-col items-center gap-2 opacity-0 -translate-y-4 transition-all duration-300"
               data-wyr-demo-target="voter4">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center text-white font-bold text-sm"
                 style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 15px rgba(236, 72, 153, 0.4);">
              Tu
            </div>
            <div class="w-2 h-2 rounded-full bg-pink-500 animate-pulse"></div>
          </div>
        </div>

        <!-- Secret Vote Label -->
        <p class="text-center text-white/50 text-sm mt-4 opacity-0 transition-opacity duration-300"
           data-wyr-demo-target="voteLabel">
          Voto secreto...
        </p>
      </div>

      <!-- Step 3: Results Reveal -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 w-full max-w-lg opacity-0 scale-95 transition-all duration-500"
           data-wyr-demo-target="step3">

        <!-- Results Bar -->
        <div class="relative h-16 md:h-20 rounded-2xl overflow-hidden mb-4"
             style="background: rgba(15, 15, 15, 0.8); border: 1px solid rgba(255,255,255,0.1);">

          <!-- Option A Bar -->
          <div class="absolute left-0 top-0 bottom-0 flex items-center justify-start px-4 transition-all duration-1000"
               style="width: 0%; background: linear-gradient(90deg, rgba(236, 72, 153, 0.3) 0%, rgba(236, 72, 153, 0.1) 100%);"
               data-wyr-demo-target="resultBarA">
            <span class="text-pink-400 font-bold text-lg md:text-2xl opacity-0 transition-opacity duration-300" data-wyr-demo-target="percentA">75%</span>
          </div>

          <!-- Option B Bar -->
          <div class="absolute right-0 top-0 bottom-0 flex items-center justify-end px-4 transition-all duration-1000"
               style="width: 0%; background: linear-gradient(90deg, rgba(6, 182, 212, 0.1) 0%, rgba(6, 182, 212, 0.3) 100%);"
               data-wyr-demo-target="resultBarB">
            <span class="text-cyan-400 font-bold text-lg md:text-2xl opacity-0 transition-opacity duration-300" data-wyr-demo-target="percentB">25%</span>
          </div>

          <!-- Center divider -->
          <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-1 h-8 bg-white/20 rounded-full"></div>
        </div>

        <!-- Minority Drinks Badge -->
        <div class="flex justify-center scale-0 opacity-0 transition-all duration-500"
             data-wyr-demo-target="drinkBadge">
          <div class="px-6 py-3 rounded-full font-bold text-base md:text-lg flex items-center gap-2"
               style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); box-shadow: 0 0 30px rgba(245, 158, 11, 0.5); color: #1a1a1a;">
            <span class="text-xl">üç∫ P2 bebe!</span>
          </div>
        </div>
      </div>

      <!-- Streak Counter -->
      <div class="absolute top-4 right-4 opacity-0 scale-0 transition-all duration-500"
           data-wyr-demo-target="streakCounter">
        <div class="px-4 py-2 rounded-xl flex items-center gap-2"
             style="background: rgba(15, 15, 15, 0.9); border: 1px solid rgba(168, 85, 247, 0.4); box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);">
          <span class="text-2xl">üî•</span>
          <div>
            <div class="text-purple-400 text-xs font-medium">Racha</div>
            <div class="text-white font-bold text-lg">3</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Back to Fun-able -->
  <div class="relative z-10 pb-16 text-center">
    <%= link_to root_path, class: "inline-flex items-center gap-2 text-white/40 hover:text-white transition-colors text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Volver a Fun-able
    <% end %>
  </div>
</div>
