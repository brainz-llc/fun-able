  <style>
    @keyframes float {
      0%, 100% { transform: translateX(-50%) translateY(0); }
      50% { transform: translateX(-50%) translateY(-8px); }
    }
    .animate-float {
      animation: float 3s ease-in-out infinite;
    }

    /* Purple Neon Title */
    .neon-purple-title {
      color: #fff;
      text-shadow:
        0 0 4px #fff,
        0 0 10px #a855f7,
        0 0 25px rgba(168, 85, 247, 0.6),
        0 0 45px rgba(168, 85, 247, 0.35);
      animation: neon-purple-flicker 4s infinite;
    }

    .neon-flicker-purple {
      animation: neon-purple-flicker 4s infinite 0.3s;
    }

    @keyframes neon-purple-flicker {
      0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
        opacity: 1;
      }
      20%, 24%, 55% {
        opacity: 0.92;
      }
      22% {
        opacity: 0.88;
      }
    }

    /* Active step indicator */
    .step-dot.active {
      background: #a855f7;
      box-shadow: 0 0 10px rgba(168, 85, 247, 0.6);
      transform: scale(1.3);
    }

    /* Winner glow animation */
    @keyframes winner-pulse {
      0%, 100% {
        box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);
      }
      50% {
        box-shadow: 0 0 40px rgba(168, 85, 247, 0.8), 0 0 60px rgba(168, 85, 247, 0.4);
      }
    }
    .winner-glow {
      animation: winner-pulse 1s ease-in-out infinite;
    }
  </style>
</div>
