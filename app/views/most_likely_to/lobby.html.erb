<% content_for :title, "Sala de Espera - Quien es Mas Probable" %>
<% content_for :hide_footer, true %>

<div class="min-h-screen relative overflow-hidden"
     data-controller="most-likely-to-lobby"
     data-most-likely-to-lobby-game-id-value="<%= @game.id %>">

  <!-- Animated Background -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-purple-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="relative z-10 max-w-2xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full mb-4"
           style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(236, 72, 153, 0.1) 100%);
                  border: 1px solid rgba(168, 85, 247, 0.3);">
        <span class="text-xl">ðŸŽ¯</span>
        <span class="text-purple-400 font-bold">Quien es Mas Probable</span>
      </div>

      <h1 class="text-2xl md:text-3xl font-black text-white mb-4">
        Sala de Espera
      </h1>

      <!-- Game Code -->
      <div class="inline-block">
        <p class="text-white/50 text-sm mb-2">Codigo de la partida</p>
        <div class="game-code text-purple-400" style="text-shadow: 0 0 20px #a855f7;">
          <%= @game.code %>
        </div>
        <button type="button"
                class="mt-3 px-4 py-2 rounded-lg text-sm text-white/60 hover:text-white bg-white/5 hover:bg-white/10 transition-all"
                onclick="navigator.clipboard.writeText('<%= @game.code %>'); this.textContent='Copiado!'">
          Copiar codigo
        </button>
      </div>
    </div>

    <!-- Game Settings -->
    <div class="p-4 rounded-xl mb-6"
         style="background: rgba(15, 15, 15, 0.8); border: 1px solid rgba(168, 85, 247, 0.2);">
      <div class="flex justify-around text-center">
        <div>
          <span class="text-2xl font-bold text-purple-400"><%= @game.total_rounds %></span>
          <p class="text-xs text-white/50">Rondas</p>
        </div>
        <div class="border-l border-white/10"></div>
        <div>
          <span class="text-2xl font-bold text-cyan-400"><%= @game.max_players %></span>
          <p class="text-xs text-white/50">Max Jugadores</p>
        </div>
        <div class="border-l border-white/10"></div>
        <div>
          <span class="text-2xl font-bold text-pink-400"><%= @players.count %></span>
          <p class="text-xs text-white/50">Jugadores</p>
        </div>
      </div>
    </div>

    <!-- Players List -->
    <div class="mb-8">
      <h2 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
        <span>ðŸ‘¥</span> Jugadores
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3" data-lobby-target="playersList">
        <% @players.each do |player| %>
          <div class="flex items-center gap-3 p-3 rounded-xl transition-all
                      <%= player.host? ? 'bg-purple-500/10 border border-purple-500/30' : 'bg-white/5 border border-white/10' %>">
            <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white flex-shrink-0"
                 style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);">
              <%= player.avatar_initials %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-white truncate">
                <%= player.display_name %>
              </p>
              <% if player.host? %>
                <p class="text-xs text-purple-400">Anfitrion</p>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Empty slots -->
        <% (@game.max_players - @players.count).times do %>
          <div class="flex items-center gap-3 p-3 rounded-xl border-2 border-dashed border-white/10 opacity-50">
            <div class="w-10 h-10 rounded-full flex items-center justify-center bg-white/5">
              <svg class="w-5 h-5 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
            <span class="text-white/30 text-sm">Esperando...</span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-4">
      <% if @game.host?(current_user) %>
        <% if @game.can_start? %>
          <%= button_to "Iniciar Partida",
              most_likely_to_start_path(@game),
              method: :post,
              class: "w-full py-4 rounded-xl font-bold text-white text-lg transition-all hover:scale-[1.02] active:scale-[0.98]",
              style: "background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%); box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);" %>
        <% else %>
          <button disabled
                  class="w-full py-4 rounded-xl font-bold text-white/50 text-lg cursor-not-allowed"
                  style="background: rgba(168, 85, 247, 0.3);">
            Se necesitan 3+ jugadores
          </button>
        <% end %>
      <% else %>
        <div class="text-center p-4 rounded-xl" style="background: rgba(168, 85, 247, 0.1); border: 1px solid rgba(168, 85, 247, 0.2);">
          <div class="flex items-center justify-center gap-2 text-purple-400">
            <div class="w-2 h-2 rounded-full bg-purple-400 animate-pulse"></div>
            <span>Esperando que el anfitrion inicie...</span>
          </div>
        </div>
      <% end %>

      <%= button_to "Abandonar",
          most_likely_to_leave_path(@game),
          method: :post,
          class: "w-full py-3 rounded-xl font-medium text-red-400 bg-red-500/10 border border-red-500/30 hover:bg-red-500/20 transition-all",
          data: { turbo_confirm: "Seguro que quieres abandonar?" } %>
    </div>
  </div>
</div>
