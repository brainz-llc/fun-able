<% content_for :title, "Quien es Mas Probable - Ronda #{@game.current_round}" %>
<% content_for :hide_footer, true %>

<%
  current_player = @game.player_for(current_user)
  has_voted = current_player&.has_voted_this_round?
  is_host = @game.host?(current_user)
  phase = @game.phase
%>

<div class="min-h-screen relative overflow-hidden"
     data-controller="most-likely-to"
     data-most-likely-to-game-id-value="<%= @game.id %>"
     data-most-likely-to-player-id-value="<%= current_player&.id %>"
     data-most-likely-to-has-voted-value="<%= has_voted %>"
     data-most-likely-to-phase-value="<%= phase %>">

  <!-- Animated Background -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-0 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-purple-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-96 h-96 md:w-[600px] md:h-[600px] bg-cyan-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Top Bar -->
  <div class="relative z-20 px-4 py-3 bg-black/60 backdrop-blur-xl border-b border-white/5">
    <div class="flex items-center justify-between max-w-4xl mx-auto">
      <!-- Left: Round Counter -->
      <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg"
           style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.15) 0%, rgba(236, 72, 153, 0.1) 100%);
                  border: 1px solid rgba(168, 85, 247, 0.2);">
        <span class="text-[10px] uppercase tracking-wider text-purple-400/70">Ronda</span>
        <span class="text-lg font-black text-white" data-most-likely-to-target="roundInfo">
          <%= @game.current_round %>/<%= @game.total_rounds %>
        </span>
      </div>

      <!-- Center: Phase/Status -->
      <div class="flex items-center gap-2 px-4 py-2 rounded-full"
           style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1);"
           data-most-likely-to-target="phaseIndicator">
        <% if phase == 'voting' %>
          <div class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></div>
          <span class="text-sm text-white/80">Votando...</span>
        <% elsif phase == 'revealing' %>
          <div class="w-2 h-2 rounded-full bg-yellow-400 animate-pulse"></div>
          <span class="text-sm text-yellow-400">Revelando!</span>
        <% end %>
      </div>

      <!-- Right: Your Drinks -->
      <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg"
           style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.15) 0%, rgba(34, 211, 238, 0.1) 100%);
                  border: 1px solid rgba(6, 182, 212, 0.2);">
        <span class="text-lg">üç∫</span>
        <span class="text-lg font-black text-cyan-400"><%= current_player&.drinks || 0 %></span>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 py-6">

    <!-- Card Display -->
    <% if @game.current_card %>
      <div class="mb-8" data-most-likely-to-target="card">
        <div class="relative mx-auto max-w-md p-6 md:p-8 rounded-2xl text-center"
             style="background: linear-gradient(145deg, #0a0a0a 0%, #1a1a1a 100%);
                    border: 2px solid rgba(168, 85, 247, 0.4);
                    box-shadow: 0 0 40px rgba(168, 85, 247, 0.2), 0 20px 50px rgba(0,0,0,0.5);">

          <!-- Category Badge -->
          <div class="inline-flex items-center gap-1 px-3 py-1 rounded-full mb-4"
               style="background: rgba(168, 85, 247, 0.2); border: 1px solid rgba(168, 85, 247, 0.3);">
            <span class="text-xs text-purple-400 uppercase tracking-wider"><%= @game.current_card.category %></span>
          </div>

          <!-- Question -->
          <p class="text-xl md:text-2xl font-bold text-white leading-relaxed">
            Quien es mas probable que...
          </p>
          <p class="text-2xl md:text-3xl font-black text-transparent bg-clip-text mt-4"
             style="background: linear-gradient(135deg, #ec4899 0%, #a855f7 50%, #06b6d4 100%);">
            <%= @game.current_card.content %>
          </p>

          <!-- Fun-able branding -->
          <div class="mt-6 pt-4 border-t border-white/10">
            <span class="text-xs text-purple-500/50">Fun-able</span>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Status Message -->
    <div class="text-center mb-6" data-most-likely-to-target="statusMessage">
      <% if has_voted %>
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full"
             style="background: linear-gradient(135deg, rgba(34, 197, 94, 0.15) 0%, rgba(34, 197, 94, 0.1) 100%);
                    border: 1px solid rgba(34, 197, 94, 0.3);">
          <span class="text-lg">‚úì</span>
          <span class="text-green-400 font-bold text-sm">Voto registrado</span>
        </div>
        <p class="text-white/50 text-sm mt-2" data-most-likely-to-target="voteCount">
          Esperando a los demas... <%= @game.votes_for_round.count %>/<%= @players.count %>
        </p>
      <% else %>
        <p class="text-white/60">Toca a la persona que crees es mas probable!</p>
      <% end %>
    </div>

    <!-- Players Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4" data-most-likely-to-target="players">
      <% @players.each do |player| %>
        <%
          is_me = player.id == current_player&.id
          player_has_voted = player.has_voted_this_round?
          votes_received = player.votes_received_this_round
        %>
        <button type="button"
                class="group relative p-4 rounded-2xl text-center transition-all duration-300
                       <%= has_voted ? 'cursor-default' : 'cursor-pointer hover:scale-105 active:scale-95' %>
                       <%= is_me ? 'bg-purple-500/10 border-2 border-purple-500/40' : 'bg-white/5 border border-white/10 hover:border-purple-500/50' %>"
                data-most-likely-to-target="voteButton playerCard"
                data-player-id="<%= player.id %>"
                data-action="click->most-likely-to#vote"
                <%= 'disabled' if has_voted %>
                style="<%= has_voted ? '' : 'box-shadow: 0 4px 20px rgba(0,0,0,0.3);' %>">

          <!-- Vote Indicator (shown when player has voted) -->
          <div class="absolute -top-2 -right-2 w-6 h-6 rounded-full bg-green-500 flex items-center justify-center shadow-lg <%= player_has_voted ? '' : 'hidden' %>"
               data-vote-indicator>
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>

          <!-- Drink Badge (shown when revealing results) -->
          <div class="absolute -top-3 -left-3 hidden" data-drink-badge>
            <div class="w-10 h-10 rounded-full bg-yellow-400 flex items-center justify-center shadow-lg"
                 style="box-shadow: 0 0 20px rgba(251, 191, 36, 0.6);">
              <span class="text-lg">üç∫</span>
            </div>
          </div>

          <!-- Avatar -->
          <div class="w-16 h-16 md:w-20 md:h-20 mx-auto rounded-full flex items-center justify-center text-xl md:text-2xl font-bold text-white mb-3 transition-all"
               style="background: linear-gradient(135deg, <%= is_me ? '#a855f7' : '#ec4899' %> 0%, <%= is_me ? '#ec4899' : '#a855f7' %> 100%);
                      box-shadow: 0 0 20px rgba(<%= is_me ? '168, 85, 247' : '236, 72, 153' %>, 0.3);">
            <%= player.avatar_initials %>
          </div>

          <!-- Name -->
          <p class="font-medium text-white truncate mb-1">
            <%= player.display_name %>
            <%= '(Tu)' if is_me %>
          </p>

          <!-- Drinks Count -->
          <div class="flex items-center justify-center gap-1 text-sm text-white/50">
            <span>üç∫</span>
            <span><%= player.drinks %></span>
          </div>

          <!-- Votes Received (hidden until reveal) -->
          <div class="absolute bottom-2 right-2 hidden" data-votes-received>
            <div class="px-2 py-1 rounded-full bg-cyan-500/20 border border-cyan-500/30">
              <span class="text-xs text-cyan-400 font-bold">0 votos</span>
            </div>
          </div>

          <!-- Hover Effect -->
          <% unless has_voted %>
            <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                 style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);"></div>
          <% end %>
        </button>
      <% end %>
    </div>

    <!-- Host Controls -->
    <% if is_host && phase == 'revealing' %>
      <div class="mt-8 flex justify-center gap-4">
        <% if @game.current_round < @game.total_rounds %>
          <button type="button"
                  class="px-6 py-3 rounded-xl font-bold text-white transition-all hover:scale-105"
                  style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
                         box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);"
                  data-action="click->most-likely-to#nextRound">
            Siguiente Ronda
          </button>
        <% else %>
          <button type="button"
                  class="px-6 py-3 rounded-xl font-bold text-white transition-all hover:scale-105"
                  style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
                         box-shadow: 0 0 20px rgba(251, 191, 36, 0.4);"
                  data-action="click->most-likely-to#endGame">
            Ver Resultados Finales
          </button>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Results Overlay -->
  <div class="hidden fixed inset-0 z-50 items-center justify-center p-4"
       style="background: rgba(0, 0, 0, 0.95); backdrop-filter: blur(8px);"
       data-most-likely-to-target="resultsOverlay">
    <div class="w-full max-w-md text-center">
      <div class="text-6xl mb-4">üèÜ</div>
      <h2 class="text-3xl font-bold text-white mb-6">Resultados Finales!</h2>

      <!-- Leaderboard -->
      <div class="space-y-3 mb-8" data-most-likely-to-target="leaderboard">
        <!-- Filled by JS -->
      </div>

      <button type="button"
              class="px-8 py-3 rounded-xl font-bold text-black bg-yellow-400 hover:bg-yellow-300 transition-all"
              data-action="click->most-likely-to#closeResults">
        Continuar
      </button>
    </div>
  </div>
</div>

<style>
@keyframes bounceIn {
  0% { transform: scale(0); opacity: 0; }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); opacity: 1; }
}
.animate-bounce-in { animation: bounceIn 0.5s ease-out; }
</style>
