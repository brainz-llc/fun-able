<div class="min-h-screen -mt-16 pt-16 relative overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 -left-32 w-64 h-64 bg-pink-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/2 -right-32 w-80 h-80 bg-cyan-500/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/3 w-48 h-48 bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Hero Section -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-[85vh] px-6 text-center">

    <!-- Floating Cards Preview (top on mobile, bottom on desktop) -->
    <div class="relative w-full max-w-sm md:max-w-6xl h-44 md:h-72 mb-6 md:mb-0 md:mt-10 order-1 md:order-3">

      <!-- Desktop Only: Extra White Card (far left) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[-18deg] transition-transform hover:rotate-0 hover:scale-110 duration-300"
           style="left: 2%; width: 160px; height: 210px;">
        <div class="w-full h-full rounded-xl p-4"
             style="background: linear-gradient(145deg, #1f1f1f 0%, #151515 100%); border: 1px solid rgba(6, 182, 212, 0.3); box-shadow: 0 0 20px rgba(6, 182, 212, 0.15), 0 15px 30px rgba(0,0,0,0.4);">
          <p class="text-white text-sm leading-relaxed">Llorar en el bano del trabajo.</p>
        </div>
      </div>

      <!-- White Card 1 (left) -->
      <div class="absolute top-1/2 -translate-y-1/2 rotate-[-12deg] transition-transform hover:rotate-0 hover:scale-110 duration-300"
           style="left: 5%; width: 130px; height: 175px;">
        <div class="w-full h-full md:w-[160px] md:h-[210px] rounded-xl p-3 md:p-4 md:absolute md:left-[80px]"
             style="background: linear-gradient(145deg, #1f1f1f 0%, #151515 100%); border: 1px solid rgba(6, 182, 212, 0.3); box-shadow: 0 0 20px rgba(6, 182, 212, 0.15), 0 15px 30px rgba(0,0,0,0.4);">
          <p class="text-white text-xs md:text-sm leading-relaxed">Tu tio borracho en la boda.</p>
        </div>
      </div>

      <!-- Black Card (center) -->
      <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 -rotate-3 transition-transform hover:rotate-0 hover:scale-110 duration-300 z-10"
           style="width: 140px; height: 190px;">
        <div class="w-full h-full md:w-[180px] md:h-[240px] rounded-xl p-4 md:p-5 flex flex-col justify-between"
             style="background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%); border: 1px solid rgba(236, 72, 153, 0.4); box-shadow: 0 0 40px rgba(236, 72, 153, 0.3), 0 20px 40px rgba(0,0,0,0.5);">
          <p class="text-white text-xs md:text-sm leading-relaxed">Lo peor de las reuniones familiares es <span class="border-b-2 border-pink-500 inline-block w-12 md:w-16"></span>.</p>
          <span class="text-[10px] md:text-xs text-pink-500/60">Fun-able</span>
        </div>
      </div>

      <!-- White Card 2 (right) -->
      <div class="absolute top-1/2 -translate-y-1/2 rotate-[10deg] transition-transform hover:rotate-0 hover:scale-110 duration-300"
           style="right: 5%; width: 130px; height: 175px;">
        <div class="w-full h-full md:w-[160px] md:h-[210px] rounded-xl p-3 md:p-4 md:absolute md:right-[80px]"
             style="background: linear-gradient(145deg, #1f1f1f 0%, #151515 100%); border: 1px solid rgba(6, 182, 212, 0.3); box-shadow: 0 0 20px rgba(6, 182, 212, 0.15), 0 15px 30px rgba(0,0,0,0.4);">
          <p class="text-white text-xs md:text-sm leading-relaxed">Los memes de WhatsApp de tu mama.</p>
        </div>
      </div>

      <!-- Desktop Only: Extra White Card (far right) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[15deg] transition-transform hover:rotate-0 hover:scale-110 duration-300"
           style="right: 2%; width: 160px; height: 210px;">
        <div class="w-full h-full rounded-xl p-4"
             style="background: linear-gradient(145deg, #1f1f1f 0%, #151515 100%); border: 1px solid rgba(6, 182, 212, 0.3); box-shadow: 0 0 20px rgba(6, 182, 212, 0.15), 0 15px 30px rgba(0,0,0,0.4);">
          <p class="text-white text-sm leading-relaxed">La foto de perfil de tu ex.</p>
        </div>
      </div>

      <!-- Desktop Only: Extra Black Card (left of center) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[-8deg] transition-transform hover:rotate-0 hover:scale-110 duration-300 z-[5]"
           style="left: 28%; width: 160px; height: 210px;">
        <div class="w-full h-full rounded-xl p-4 flex flex-col justify-between"
             style="background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%); border: 1px solid rgba(236, 72, 153, 0.4); box-shadow: 0 0 30px rgba(236, 72, 153, 0.2), 0 15px 30px rgba(0,0,0,0.4);">
          <p class="text-white text-sm leading-relaxed">Mi vida amorosa es como <span class="border-b-2 border-pink-500 inline-block w-14"></span>.</p>
          <span class="text-[10px] text-pink-500/60">Fun-able</span>
        </div>
      </div>

      <!-- Desktop Only: Extra Black Card (right of center) -->
      <div class="hidden md:block absolute top-1/2 -translate-y-1/2 rotate-[6deg] transition-transform hover:rotate-0 hover:scale-110 duration-300 z-[5]"
           style="right: 28%; width: 160px; height: 210px;">
        <div class="w-full h-full rounded-xl p-4 flex flex-col justify-between"
             style="background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%); border: 1px solid rgba(236, 72, 153, 0.4); box-shadow: 0 0 30px rgba(236, 72, 153, 0.2), 0 15px 30px rgba(0,0,0,0.4);">
          <p class="text-white text-sm leading-relaxed">En mi tiempo libre me gusta <span class="border-b-2 border-pink-500 inline-block w-14"></span>.</p>
          <span class="text-[10px] text-pink-500/60">Fun-able</span>
        </div>
      </div>
    </div>

    <!-- Logo -->
    <div class="mb-6 order-2 md:order-1">
      <h1 class="font-black tracking-tighter leading-none" style="font-size: clamp(4.5rem, 18vw, 7rem);">
        <span class="text-pink-500" style="text-shadow: 0 0 50px rgba(236, 72, 153, 0.8);">Fun</span><span class="text-cyan-400" style="text-shadow: 0 0 30px rgba(34, 211, 238, 0.6);">-</span><span class="text-pink-500" style="text-shadow: 0 0 50px rgba(236, 72, 153, 0.8);">able</span>
      </h1>
      <p class="mt-3 text-lg md:text-xl text-white/60 font-light tracking-wide"><%= t('app_tagline') %></p>
    </div>

    <!-- Action Buttons -->
    <div class="w-full max-w-md md:max-w-2xl space-y-5 order-3 md:order-2">
      <!-- Create Game Button - Different on mobile vs desktop -->
      <%= link_to new_game_path, class: "group relative block w-full overflow-hidden rounded-2xl transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]" do %>
        <div class="absolute inset-0 bg-gradient-to-r from-pink-600 via-pink-500 to-purple-500"></div>
        <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-gradient-to-r from-pink-500 via-purple-500 to-pink-500 bg-[length:200%_100%] animate-gradient"></div>

        <!-- Mobile Layout -->
        <div class="relative md:hidden flex items-center justify-center gap-4 py-5 px-8">
          <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center backdrop-blur-sm">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          <div class="text-left">
            <span class="block text-xl font-black text-white tracking-wide"><%= t('home.create_game') %></span>
            <span class="block text-sm text-white/70">Invita a tus amigos</span>
          </div>
        </div>

        <!-- Desktop Layout -->
        <div class="relative hidden md:flex items-center justify-between py-4 px-8">
          <div class="flex items-center gap-5">
            <div class="w-14 h-14 rounded-2xl bg-white/10 flex items-center justify-center backdrop-blur-sm border border-white/20">
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
            <div class="text-left">
              <span class="block text-2xl font-black text-white tracking-wide"><%= t('home.create_game') %></span>
              <span class="block text-sm text-white/60">Crea una sala y comparte el codigo con tus amigos</span>
            </div>
          </div>
          <div class="flex items-center gap-2 text-white/80 group-hover:text-white transition-colors">
            <span class="text-sm font-medium">Comenzar</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </div>

        <div class="absolute inset-0 rounded-2xl" style="box-shadow: inset 0 1px 1px rgba(255,255,255,0.2), 0 0 40px rgba(236, 72, 153, 0.4);"></div>
      <% end %>

      <!-- Divider -->
      <div class="flex items-center gap-4">
        <div class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
        <span class="text-white/40 text-sm font-medium">o unete con codigo</span>
        <div class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
      </div>

      <!-- Join Game -->
      <%= form_with url: join_game_by_code_path, method: :post, class: "w-full" do %>
        <div class="relative">
          <input type="text"
                 name="code"
                 placeholder="ABC123"
                 maxlength="6"
                 class="w-full text-center uppercase tracking-[0.5em] font-mono text-2xl py-4 rounded-2xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-cyan-400/50 placeholder:text-white/20"
                 style="background: rgba(10, 10, 15, 0.9); border: 2px solid rgba(6, 182, 212, 0.3); color: #22d3ee; letter-spacing: 0.5em;"
                 autocomplete="off">
          <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 w-12 h-12 rounded-xl flex items-center justify-center text-white transition-all duration-300 hover:scale-110 active:scale-95"
                  style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 20px rgba(6, 182, 212, 0.4);">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
        </div>
      <% end %>
    </div>

  </div>

  <!-- Scroll indicator (below hero) -->
  <div class="flex justify-center py-4 animate-bounce">
    <svg class="w-6 h-6 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>

  <!-- How to Play Section -->
  <div class="relative z-10 py-16 px-6">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-12 text-white">Como Jugar</h2>

    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center p-6 rounded-2xl transition-all duration-300 hover:scale-105"
           style="background: linear-gradient(180deg, rgba(236, 72, 153, 0.1) 0%, rgba(0,0,0,0) 100%); border: 1px solid rgba(236, 72, 153, 0.2);">
        <div class="w-14 h-14 mx-auto mb-4 rounded-full flex items-center justify-center text-2xl font-bold"
             style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 20px rgba(236, 72, 153, 0.4);">1</div>
        <h3 class="font-bold text-lg mb-2 text-pink-400">Crea o Unete</h3>
        <p class="text-white/50 text-sm">Crea una partida y comparte el codigo con tus amigos</p>
      </div>

      <div class="text-center p-6 rounded-2xl transition-all duration-300 hover:scale-105"
           style="background: linear-gradient(180deg, rgba(6, 182, 212, 0.1) 0%, rgba(0,0,0,0) 100%); border: 1px solid rgba(6, 182, 212, 0.2);">
        <div class="w-14 h-14 mx-auto mb-4 rounded-full flex items-center justify-center text-2xl font-bold"
             style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 20px rgba(6, 182, 212, 0.4);">2</div>
        <h3 class="font-bold text-lg mb-2 text-cyan-400">Responde</h3>
        <p class="text-white/50 text-sm">Elige tus mejores cartas blancas para completar la negra</p>
      </div>

      <div class="text-center p-6 rounded-2xl transition-all duration-300 hover:scale-105"
           style="background: linear-gradient(180deg, rgba(168, 85, 247, 0.1) 0%, rgba(0,0,0,0) 100%); border: 1px solid rgba(168, 85, 247, 0.2);">
        <div class="w-14 h-14 mx-auto mb-4 rounded-full flex items-center justify-center text-2xl font-bold"
             style="background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);">3</div>
        <h3 class="font-bold text-lg mb-2 text-purple-400">Gana</h3>
        <p class="text-white/50 text-sm">El Zar elige la respuesta mas graciosa. Gana puntos!</p>
      </div>
    </div>
  </div>

  <!-- Features -->
  <div class="relative z-10 py-16 px-6">
    <div class="max-w-4xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="p-5 rounded-xl text-center transition-all duration-300 hover:scale-105"
           style="background: rgba(15, 15, 20, 0.6); border: 1px solid rgba(255,255,255,0.1);">
        <div class="text-3xl mb-2">ðŸŒŽ</div>
        <h3 class="font-bold text-sm text-white mb-1">Regional</h3>
        <p class="text-white/40 text-xs">Humor local</p>
      </div>
      <div class="p-5 rounded-xl text-center transition-all duration-300 hover:scale-105"
           style="background: rgba(15, 15, 20, 0.6); border: 1px solid rgba(255,255,255,0.1);">
        <div class="text-3xl mb-2">ðŸŽ¨</div>
        <h3 class="font-bold text-sm text-white mb-1">Personaliza</h3>
        <p class="text-white/40 text-xs">Crea mazos</p>
      </div>
      <div class="p-5 rounded-xl text-center transition-all duration-300 hover:scale-105"
           style="background: rgba(15, 15, 20, 0.6); border: 1px solid rgba(255,255,255,0.1);">
        <div class="text-3xl mb-2">âš¡</div>
        <h3 class="font-bold text-sm text-white mb-1">Tiempo Real</h3>
        <p class="text-white/40 text-xs">Sin recargas</p>
      </div>
      <div class="p-5 rounded-xl text-center transition-all duration-300 hover:scale-105"
           style="background: rgba(15, 15, 20, 0.6); border: 1px solid rgba(255,255,255,0.1);">
        <div class="text-3xl mb-2">ðŸ”¥</div>
        <h3 class="font-bold text-sm text-white mb-1">+18</h3>
        <p class="text-white/40 text-xs">Sin limites</p>
      </div>
    </div>
  </div>

  <!-- Browse Decks CTA -->
  <div class="relative z-10 py-16 px-6 text-center">
    <%= link_to decks_path, class: "inline-flex items-center gap-3 px-8 py-4 rounded-2xl font-bold text-white/80 hover:text-white transition-all duration-300 hover:scale-105", style: "background: rgba(15, 15, 20, 0.8); border: 1px solid rgba(168, 85, 247, 0.3);" do %>
      <span>Explorar Mazos</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    <% end %>
  </div>
</div>
