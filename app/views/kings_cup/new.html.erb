<div class="min-h-screen -mt-16 pt-24 pb-12 px-4">
  <!-- Background -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[400px] md:h-[400px] bg-amber-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-0 translate-x-1/2 w-80 h-80 md:w-[500px] md:h-[500px] bg-pink-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="relative z-10 max-w-md mx-auto">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
           style="background: linear-gradient(145deg, rgba(251, 191, 36, 0.2) 0%, rgba(245, 158, 11, 0.1) 100%);
                  border: 2px solid rgba(251, 191, 36, 0.4);">
        <span class="text-3xl">üëë</span>
      </div>
      <h1 class="text-2xl md:text-3xl font-bold text-white mb-2">Nueva Partida</h1>
      <p class="text-white/60">Configura tu Copa del Rey</p>
    </div>

    <!-- Form Card -->
    <div class="p-6 rounded-2xl"
         style="background: linear-gradient(145deg, rgba(26, 26, 26, 0.95) 0%, rgba(15, 15, 15, 0.95) 100%);
                border: 1px solid rgba(251, 191, 36, 0.2);
                box-shadow: 0 10px 40px rgba(0,0,0,0.4);">

      <%= form_with model: @game, url: kings_cup_path, method: :post, class: "space-y-6" do |f| %>

        <!-- Max Players -->
        <div>
          <label class="block text-sm font-medium text-amber-400 mb-2">Jugadores Maximos</label>
          <div class="relative">
            <%= f.select :max_players,
                options_for_select((2..20).map { |n| ["#{n} jugadores", n] }, @game.max_players || 10),
                {},
                class: "w-full px-4 py-3 rounded-xl text-white appearance-none cursor-pointer focus:outline-none focus:ring-2 focus:ring-amber-400/50",
                style: "background: rgba(20, 20, 20, 0.9); border: 1px solid rgba(255, 255, 255, 0.1);" %>
            <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-5 h-5 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Game Info -->
        <div class="p-4 rounded-xl bg-white/5 border border-white/10">
          <h3 class="font-medium text-white mb-3 flex items-center gap-2">
            <span class="text-amber-400">‚ÑπÔ∏è</span>
            Como funciona
          </h3>
          <ul class="text-sm text-white/70 space-y-2">
            <li class="flex items-start gap-2">
              <span class="text-amber-400">1.</span>
              <span>Cada jugador saca una carta en su turno</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-amber-400">2.</span>
              <span>Cada carta tiene una regla especial</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-amber-400">3.</span>
              <span>Los Reyes llenan la Copa del Rey</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-amber-400">4.</span>
              <span>Quien saque el 4to Rey, bebe la Copa!</span>
            </li>
          </ul>
        </div>

        <!-- Submit -->
        <div class="pt-2">
          <%= f.submit "Crear Partida",
              class: "w-full py-4 rounded-xl font-bold text-black text-lg transition-all duration-300 active:scale-[0.98]",
              style: "background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); box-shadow: 0 0 30px rgba(251, 191, 36, 0.4);" %>
        </div>

      <% end %>
    </div>

    <!-- Back Link -->
    <div class="text-center mt-6">
      <%= link_to kings_cup_path, class: "text-white/50 hover:text-white transition-colors" do %>
        <span class="inline-flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver
        </span>
      <% end %>
    </div>
  </div>
</div>
