<div class="min-h-screen -mt-16 pt-16 relative">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-amber-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[600px] md:h-[600px] bg-pink-500/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[400px] md:h-[400px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <!-- Hero Section -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-[85vh] px-6 text-center">

    <!-- Crown Icon -->
    <div class="mb-6">
      <div class="w-24 h-24 md:w-32 md:h-32 rounded-full flex items-center justify-center mx-auto"
           style="background: linear-gradient(145deg, rgba(251, 191, 36, 0.2) 0%, rgba(245, 158, 11, 0.1) 100%);
                  border: 2px solid rgba(251, 191, 36, 0.4);
                  box-shadow: 0 0 40px rgba(251, 191, 36, 0.3);">
        <span class="text-5xl md:text-6xl">ðŸ‘‘</span>
      </div>
    </div>

    <!-- Title -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-6xl font-black text-white mb-2"
          style="text-shadow: 0 0 30px rgba(251, 191, 36, 0.4);">
        Copa del Rey
      </h1>
      <p class="text-lg md:text-xl text-white/60 font-light">El clasico juego de cartas para beber</p>
    </div>

    <!-- Card Preview -->
    <div class="relative w-full max-w-md h-48 md:h-64 mb-8">
      <!-- Stack of cards -->
      <% ['K', 'Q', 'J', '10'].each_with_index do |value, i| %>
        <div class="absolute left-1/2 top-1/2 transition-transform hover:scale-105 duration-300"
             style="transform: translate(-50%, -50%) rotate(<%= (i - 1.5) * 8 %>deg) translateY(<%= i * 3 %>px);
                    width: <%= 100 - i * 5 %>px; height: <%= 140 - i * 7 %>px;
                    z-index: <%= 10 - i %>;">
          <div class="w-full h-full rounded-xl flex flex-col items-center justify-center"
               style="background: linear-gradient(145deg, #1a1a1a 0%, #0a0a0a 100%);
                      border: 2px solid <%= value == 'K' ? 'rgba(251, 191, 36, 0.5)' : 'rgba(236, 72, 153, 0.3)' %>;
                      box-shadow: 0 0 20px <%= value == 'K' ? 'rgba(251, 191, 36, 0.3)' : 'rgba(236, 72, 153, 0.2)' %>, 0 10px 30px rgba(0,0,0,0.5);">
            <span class="text-2xl md:text-3xl font-bold <%= value == 'K' ? 'text-amber-400' : 'text-white' %>"><%= value %></span>
            <span class="text-xl"><%= value == 'K' ? 'â™ ï¸' : ['â™¥ï¸', 'â™¦ï¸', 'â™£ï¸'][i % 3] %></span>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="w-full max-w-md space-y-5">
      <!-- Create Game Button -->
      <%= link_to kings_cup_new_path, class: "group block w-full" do %>
        <div class="flex items-center justify-center gap-4 py-5 px-8 rounded-2xl transition-all duration-300 active:scale-[0.98]"
             style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
                    box-shadow: 0 0 40px rgba(251, 191, 36, 0.5);">
          <div class="w-12 h-12 rounded-full bg-white/15 flex items-center justify-center">
            <span class="text-2xl">ðŸ‘‘</span>
          </div>
          <div class="text-left">
            <span class="block text-xl font-black text-black tracking-wide">Crear Partida</span>
            <span class="block text-sm text-black/70">Invita a tus amigos</span>
          </div>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="flex items-center gap-4">
        <div class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
        <span class="text-white/40 text-sm font-medium">o unete con codigo</span>
        <div class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
      </div>

      <!-- Join Game -->
      <%= form_with url: kings_cup_join_by_code_path, method: :post, class: "w-full" do %>
        <div class="relative">
          <input type="text"
                 name="code"
                 placeholder="ABC123"
                 maxlength="6"
                 class="w-full text-center uppercase tracking-[0.5em] font-mono text-2xl py-4 rounded-2xl transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-amber-400/50 placeholder:text-white/20"
                 style="background: rgba(10, 10, 15, 0.9); border: 2px solid rgba(251, 191, 36, 0.3); color: #fbbf24; letter-spacing: 0.5em;"
                 autocomplete="off">
          <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 w-12 h-12 rounded-xl flex items-center justify-center text-black transition-all duration-300 hover:scale-110 active:scale-95"
                  style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); box-shadow: 0 0 20px rgba(251, 191, 36, 0.4);">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
        </div>
      <% end %>
    </div>

  </div>

  <!-- Rules Preview -->
  <div class="relative z-10 py-12 px-4">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-8 text-white">Reglas de las Cartas</h2>

    <div class="max-w-4xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4">
      <% KingsCupGame::CARD_RULES.each do |value, rule| %>
        <div class="p-3 md:p-4 rounded-xl transition-all hover:scale-105 duration-300"
             style="background: linear-gradient(145deg, rgba(26, 26, 26, 0.9) 0%, rgba(10, 10, 10, 0.9) 100%);
                    border: 1px solid <%= value == 'K' ? 'rgba(251, 191, 36, 0.4)' : 'rgba(236, 72, 153, 0.3)' %>;
                    box-shadow: 0 4px 20px rgba(0,0,0,0.4);">
          <div class="flex items-center gap-2 mb-2">
            <span class="text-xl md:text-2xl font-bold <%= value == 'K' ? 'text-amber-400' : 'text-pink-400' %>"><%= value %></span>
            <span class="text-lg"><%= rule[:icon] %></span>
          </div>
          <h3 class="font-bold text-white text-sm md:text-base mb-1"><%= rule[:name] %></h3>
          <p class="text-white/60 text-xs md:text-sm leading-relaxed"><%= rule[:description] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
