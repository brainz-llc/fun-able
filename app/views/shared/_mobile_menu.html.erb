<%# Mobile slide-out menu - Full-screen overlay with neon styling %>
<div id="mobile-menu"
     class="mobile-menu-overlay fixed inset-0 z-50 hidden lg:hidden"
     data-controller="mobile-menu"
     data-action="keydown.escape->mobile-menu#close">

  <%# Dark overlay backdrop %>
  <div class="absolute inset-0 bg-black/80 backdrop-blur-sm"
       data-action="click->mobile-menu#close"></div>

  <%# Slide-in panel %>
  <div class="mobile-menu-panel absolute inset-y-0 left-0 w-[85%] max-w-sm bg-bg-darker border-r border-pink-500/30 shadow-[5px_0_30px_rgba(236,72,153,0.3)] flex flex-col"
       style="padding-top: env(safe-area-inset-top, 0px); padding-bottom: env(safe-area-inset-bottom, 0px);">

    <%# Header with close button %>
    <div class="flex items-center justify-between p-4 border-b border-gray-800">
      <div class="flex items-center gap-2">
        <span class="text-2xl animate-pulse">üé¥</span>
        <span class="text-xl font-bold text-pink-500 drop-shadow-[0_0_10px_rgba(236,72,153,0.8)]">Fun-able</span>
      </div>
      <button type="button"
              class="p-2 rounded-lg text-text-secondary hover:text-white hover:bg-white/10 transition"
              data-action="click->mobile-menu#close"
              aria-label="Close menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <%# User profile section %>
    <% if logged_in? %>
      <div class="p-4 border-b border-gray-800 bg-gradient-to-r from-pink-500/10 to-purple-500/10">
        <div class="flex items-center gap-3">
          <div class="player-avatar w-12 h-12 text-lg">
            <%= current_user.avatar_initials %>
          </div>
          <div class="flex-1 min-w-0">
            <div class="font-bold text-white truncate"><%= current_user.display_name %></div>
            <% if guest_user? %>
              <div class="text-xs text-pink-400"><%= t('user.guest') %></div>
            <% else %>
              <div class="text-xs text-text-muted truncate"><%= current_user.email %></div>
            <% end %>
          </div>
        </div>
        <% if guest_user? %>
          <%= link_to new_registration_path,
              class: "mt-3 flex items-center justify-center gap-2 w-full py-2 px-4 rounded-lg bg-gradient-to-r from-pink-500 to-purple-500 text-white font-medium text-sm shadow-[0_0_15px_rgba(236,72,153,0.4)] hover:shadow-[0_0_25px_rgba(236,72,153,0.6)] transition",
              data: { action: "click->mobile-menu#close" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
            <%= t('user.upgrade_account') %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="p-4 border-b border-gray-800">
        <div class="text-center text-text-muted mb-3">Welcome to Fun-able!</div>
        <div class="flex flex-col gap-2">
          <%= link_to new_session_path,
              class: "flex items-center justify-center gap-2 w-full py-2.5 px-4 rounded-lg border-2 border-purple-500/30 text-purple-400 font-medium text-sm hover:bg-purple-500/10 hover:border-purple-500 transition",
              data: { action: "click->mobile-menu#close" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
            <%= t('nav.login') %>
          <% end %>
          <%= button_to create_guest_session_path,
              class: "flex items-center justify-center gap-2 w-full py-2.5 px-4 rounded-lg bg-gradient-to-r from-pink-500 to-purple-500 text-white font-medium text-sm shadow-[0_0_15px_rgba(236,72,153,0.4)] hover:shadow-[0_0_25px_rgba(236,72,153,0.6)] transition",
              data: { action: "click->mobile-menu#close" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= t('home.play_as_guest') %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Navigation links %>
    <nav class="flex-1 overflow-y-auto py-2">
      <div class="px-3 py-2 text-xs font-semibold text-text-muted uppercase tracking-wider">Navigation</div>

      <%= link_to decks_path,
          class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg text-text-secondary hover:text-white hover:bg-white/5 transition group",
          data: { action: "click->mobile-menu#close" } do %>
        <span class="w-8 h-8 rounded-lg bg-cyan-500/20 flex items-center justify-center group-hover:bg-cyan-500/30 transition">
          <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </span>
        <span class="font-medium"><%= t('nav.browse_decks') %></span>
      <% end %>

      <% if logged_in? %>
        <%= link_to my_decks_decks_path,
            class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg text-text-secondary hover:text-white hover:bg-white/5 transition group",
            data: { action: "click->mobile-menu#close" } do %>
          <span class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center group-hover:bg-purple-500/30 transition">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
            </svg>
          </span>
          <span class="font-medium"><%= t('nav.my_decks') %></span>
        <% end %>

        <%= link_to new_deck_path,
            class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg text-text-secondary hover:text-white hover:bg-white/5 transition group",
            data: { action: "click->mobile-menu#close" } do %>
          <span class="w-8 h-8 rounded-lg bg-green-500/20 flex items-center justify-center group-hover:bg-green-500/30 transition">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </span>
          <span class="font-medium">Create Deck</span>
        <% end %>
      <% end %>

      <div class="my-2 mx-4 border-t border-gray-800"></div>

      <div class="px-3 py-2 text-xs font-semibold text-text-muted uppercase tracking-wider">Juegos</div>

      <% if logged_in? %>
        <%= link_to new_game_path,
            class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg bg-gradient-to-r from-pink-500/10 to-transparent border border-pink-500/20 text-pink-400 hover:text-pink-300 hover:border-pink-500/40 transition group",
            data: { action: "click->mobile-menu#close" } do %>
          <span class="w-8 h-8 rounded-lg bg-pink-500/20 flex items-center justify-center group-hover:bg-pink-500/30 transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </span>
          <span class="font-bold"><%= t('nav.create_game') %></span>
        <% end %>
      <% end %>

      <%= link_to kings_cup_path,
          class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg bg-gradient-to-r from-amber-500/10 to-transparent border border-amber-500/20 text-amber-400 hover:text-amber-300 hover:border-amber-500/40 transition group",
          data: { action: "click->mobile-menu#close" } do %>
        <span class="w-8 h-8 rounded-lg bg-amber-500/20 flex items-center justify-center group-hover:bg-amber-500/30 transition text-lg">
          üëë
        </span>
        <span class="font-bold">Copa del Rey</span>
      <% end %>

      <%= link_to truth_or_dare_index_path,
          class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg bg-gradient-to-r from-purple-500/10 to-transparent border border-purple-500/20 text-purple-400 hover:text-purple-300 hover:border-purple-500/40 transition group",
          data: { action: "click->mobile-menu#close" } do %>
        <span class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center group-hover:bg-purple-500/30 transition text-lg">
          üé≠
        </span>
        <span class="font-bold">Verdad o Reto</span>
      <% end %>

      <%= link_to never_have_i_ever_path,
          class: "flex items-center gap-3 mx-2 px-4 py-3 rounded-lg bg-gradient-to-r from-purple-500/10 to-transparent border border-purple-500/20 text-purple-400 hover:text-purple-300 hover:border-purple-500/40 transition group",
          data: { action: "click->mobile-menu#close" } do %>
        <span class="w-8 h-8 rounded-lg bg-purple-500/20 flex items-center justify-center group-hover:bg-purple-500/30 transition text-lg">
          üçª
        </span>
        <span class="font-bold">Yo Nunca Nunca</span>
      <% end %>
    </nav>

    <%# Footer with logout %>
    <% if logged_in? %>
      <div class="p-4 border-t border-gray-800" style="padding-bottom: max(env(safe-area-inset-bottom, 0px), 1rem);">
        <%= button_to session_path,
            method: :delete,
            class: "flex items-center justify-center gap-2 w-full py-2.5 px-4 rounded-lg border border-red-500/30 text-red-400 font-medium text-sm hover:bg-red-500/10 hover:border-red-500/50 transition",
            data: { action: "click->mobile-menu#close" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <%= t('nav.logout') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
