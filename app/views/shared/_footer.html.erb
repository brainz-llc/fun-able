<footer class="border-t border-white/5 mt-auto"
        style="background: rgba(10, 10, 15, 0.9);"
        style="padding-bottom: env(safe-area-inset-bottom, 0px);">

  <%# Mobile footer - Simple copyright only %>
  <div class="lg:hidden py-4 px-4">
    <p class="text-center text-text-muted text-xs">
      <span class="text-pink-500 font-bold drop-shadow-[0_0_8px_rgba(236,72,153,0.6)]">Fun-able</span>
      <span class="mx-1.5 text-gray-700">|</span>
      <span><%= t('app_tagline') %></span>
    </p>
  </div>

  <%# Desktop footer - Full version %>
  <div class="hidden lg:block py-8">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <%# Logo and tagline %>
        <div class="flex items-center gap-3">
          <span class="text-2xl">ðŸŽ´</span>
          <div>
            <span class="text-pink-500 font-bold text-lg drop-shadow-[0_0_8px_rgba(236,72,153,0.6)]">Fun-able</span>
            <span class="text-text-muted text-sm ml-2">- <%= t('app_tagline') %></span>
          </div>
        </div>

        <%# Navigation links %>
        <nav class="flex items-center gap-6">
          <%= link_to decks_path, class: "text-text-muted hover:text-cyan-400 transition text-sm flex items-center gap-1.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Explore Decks
          <% end %>
          <%= link_to new_deck_path, class: "text-text-muted hover:text-purple-400 transition text-sm flex items-center gap-1.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Create Deck
          <% end %>
          <% if logged_in? %>
            <%= link_to new_game_path, class: "text-pink-400 hover:text-pink-300 transition text-sm flex items-center gap-1.5 font-medium" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Start Game
            <% end %>
          <% end %>
        </nav>
      </div>

      <%# Neon divider %>
      <div class="neon-divider my-6 opacity-30"></div>

      <%# Copyright %>
      <p class="text-center text-text-muted text-xs">
        Made with <span class="text-pink-500">neon vibes</span> for party people everywhere.
      </p>
    </div>
  </div>
</footer>
