<footer class="border-t border-white/5 mt-auto"
        style="background: rgba(5, 5, 10, 0.95); padding-bottom: env(safe-area-inset-bottom, 0px);">

  <%# Mobile footer - Compact %>
  <div class="lg:hidden py-6 px-4">
    <div class="flex items-center justify-center gap-2 mb-3">
      <span class="font-bold text-sm neon-logo-pink">Fun</span><span class="neon-logo-dash">-</span><span class="font-bold text-sm neon-logo-pink">able</span>
    </div>
    <p class="text-center text-white/30 text-xs">
      <%= t('app_tagline') %>
    </p>
  </div>

  <%# Desktop footer - Full version %>
  <div class="hidden lg:block py-10">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between">
        <%# Logo and tagline %>
        <div class="flex items-center gap-4">
          <span class="text-xl font-bold">
            <span class="neon-logo-pink">Fun</span><span class="neon-logo-dash">-</span><span class="neon-logo-pink">able</span>
          </span>
          <span class="text-white/30 text-sm"><%= t('app_tagline') %></span>
        </div>

        <%# Navigation links %>
        <nav class="flex items-center gap-8">
          <%= link_to decks_path, class: "text-white/40 hover:text-cyan-400 transition text-sm" do %>
            Explorar Mazos
          <% end %>
          <%= link_to new_deck_path, class: "text-white/40 hover:text-purple-400 transition text-sm" do %>
            Crear Mazo
          <% end %>
          <% if logged_in? %>
            <%= link_to new_game_path, class: "text-pink-400/80 hover:text-pink-400 transition text-sm font-medium" do %>
              Nueva Partida
            <% end %>
          <% end %>
        </nav>
      </div>

      <%# Divider %>
      <div class="h-px bg-gradient-to-r from-transparent via-white/10 to-transparent my-6"></div>

      <%# Copyright %>
      <p class="text-center text-white/20 text-xs">
        Hecho con <span class="text-pink-500/60">vibraciones neon</span> para gente fiestera.
      </p>
    </div>
  </div>
</footer>
