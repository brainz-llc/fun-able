<div class="min-h-screen -mt-16 pt-16 relative overflow-hidden">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/20 md:bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[600px] md:h-[600px] bg-cyan-500/15 md:bg-cyan-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[400px] md:h-[400px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4 py-8 md:py-12">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8 md:mb-10">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">
          <%= t('nav.browse_decks') %>
        </h1>
        <p class="text-white/50 text-sm md:text-base">Explora y descubre mazos de la comunidad</p>
      </div>
      <%= link_to new_deck_path,
          class: "w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3.5 rounded-xl font-bold text-white transition-all duration-300 active:scale-[0.98] hover:scale-[1.02]",
          style: "background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); box-shadow: 0 0 25px rgba(236, 72, 153, 0.4);" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <%= t('deck.create_new') %>
      <% end %>
    </div>

    <!-- Filters Card -->
    <div class="rounded-2xl p-4 md:p-6 mb-8"
         style="background: rgba(10, 10, 15, 0.8); border: 1px solid rgba(255, 255, 255, 0.08);">

      <!-- Mobile Filters - Collapsible -->
      <details class="md:hidden group" open>
        <summary class="flex items-center justify-between cursor-pointer list-none py-2 text-white font-medium">
          <span class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(168, 85, 247, 0.1) 100%);">
              <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
              </svg>
            </div>
            Filtros
          </span>
          <svg class="w-5 h-5 transition-transform duration-300 group-open:rotate-180 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="pt-4">
          <%= form_with url: decks_path, method: :get, class: "flex flex-col gap-4" do |f| %>
            <div>
              <label class="block text-sm font-medium text-white/60 mb-2"><%= t('region.select') %></label>
              <%= f.collection_select :region_id, Region.active.sorted, :id, :display_name,
                  { include_blank: t('region.all'), selected: params[:region_id] },
                  class: "w-full px-4 py-3 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all",
                  style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-white/60 mb-2">Clasificacion</label>
              <%= f.select :content_rating,
                  options_for_select([
                    [t('region.all'), ''],
                    [t('deck.content_rating.family'), 'family'],
                    [t('deck.content_rating.adult'), 'adult'],
                    [t('deck.content_rating.nsfw'), 'nsfw']
                  ], params[:content_rating]),
                  {},
                  class: "w-full px-4 py-3 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all",
                  style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-white/60 mb-2">Ordenar</label>
              <%= f.select :sort,
                  options_for_select([
                    ['Mas populares', 'popular'],
                    ['Mas recientes', 'recent']
                  ], params[:sort] || 'popular'),
                  {},
                  class: "w-full px-4 py-3 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all",
                  style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
            </div>

            <%= f.submit t('actions.filter'),
                class: "w-full py-3 rounded-xl font-semibold text-white transition-all duration-300 active:scale-[0.98]",
                style: "background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); box-shadow: 0 0 20px rgba(168, 85, 247, 0.3);" %>
          <% end %>
        </div>
      </details>

      <!-- Desktop Filters -->
      <%= form_with url: decks_path, method: :get, class: "hidden md:flex flex-wrap gap-6 items-end" do |f| %>
        <div class="flex-1 min-w-48">
          <label class="block text-sm font-medium text-white/60 mb-2"><%= t('region.select') %></label>
          <%= f.collection_select :region_id, Region.active.sorted, :id, :display_name,
              { include_blank: t('region.all'), selected: params[:region_id] },
              class: "w-full px-4 py-3 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all cursor-pointer",
              style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
        </div>

        <div class="flex-1 min-w-48">
          <label class="block text-sm font-medium text-white/60 mb-2">Clasificacion</label>
          <%= f.select :content_rating,
              options_for_select([
                [t('region.all'), ''],
                [t('deck.content_rating.family'), 'family'],
                [t('deck.content_rating.adult'), 'adult'],
                [t('deck.content_rating.nsfw'), 'nsfw']
              ], params[:content_rating]),
              {},
              class: "w-full px-4 py-3 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all cursor-pointer",
              style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
        </div>

        <div class="flex-1 min-w-48">
          <label class="block text-sm font-medium text-white/60 mb-2">Ordenar</label>
          <%= f.select :sort,
              options_for_select([
                ['Mas populares', 'popular'],
                ['Mas recientes', 'recent']
              ], params[:sort] || 'popular'),
              {},
              class: "w-full px-4 py-3 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all cursor-pointer",
              style: "background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(168, 85, 247, 0.2);" %>
        </div>

        <%= f.submit t('actions.filter'),
            class: "px-8 py-3 rounded-xl font-semibold text-white transition-all duration-300 hover:scale-[1.02]",
            style: "background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%); box-shadow: 0 0 20px rgba(168, 85, 247, 0.3);" %>
      <% end %>
    </div>

    <!-- Decks Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6">
      <% @decks.each do |deck| %>
        <%= link_to deck_path(deck), class: "group block rounded-2xl overflow-hidden transition-all duration-300 hover:scale-[1.02]", style: "background: linear-gradient(145deg, rgba(15, 15, 20, 0.95) 0%, rgba(10, 10, 15, 0.98) 100%); border: 1px solid rgba(255, 255, 255, 0.08); box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);" do %>
          <!-- Card Header -->
          <div class="p-4 md:p-5 border-b border-white/5">
            <h2 class="font-bold text-base md:text-lg text-white group-hover:text-pink-400 transition-colors duration-300 line-clamp-2 mb-3"><%= deck.name %></h2>
            <div class="flex flex-wrap items-center gap-2">
              <% if deck.official? %>
                <span class="text-[10px] md:text-xs px-2.5 py-1 rounded-full font-medium"
                      style="background: rgba(236, 72, 153, 0.15); color: #f472b6; border: 1px solid rgba(236, 72, 153, 0.3);">
                  <%= t('deck.official') %>
                </span>
              <% end %>
              <% if deck.region %>
                <span class="text-[10px] md:text-xs px-2.5 py-1 rounded-full text-white/50 truncate max-w-[120px]"
                      style="background: rgba(255, 255, 255, 0.05);">
                  <%= deck.region.display_name %>
                </span>
              <% end %>
            </div>
          </div>

          <!-- Card Body - Description -->
          <div class="hidden sm:block p-4 md:p-5">
            <p class="text-white/40 text-sm line-clamp-2 leading-relaxed"><%= deck.description %></p>
          </div>

          <!-- Card Footer -->
          <div class="px-4 md:px-5 py-3 md:py-4 flex items-center justify-between"
               style="background: rgba(0, 0, 0, 0.2);">
            <div class="flex items-center gap-3 text-sm">
              <span class="flex items-center gap-1">
                <span class="text-pink-400 font-bold"><%= deck.black_cards_count %></span>
                <span class="text-white/30 hidden md:inline text-xs">negras</span>
              </span>
              <span class="text-white/20">/</span>
              <span class="flex items-center gap-1">
                <span class="text-cyan-400 font-bold"><%= deck.white_cards_count %></span>
                <span class="text-white/30 hidden md:inline text-xs">blancas</span>
              </span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-[10px] md:text-xs px-2 py-0.5 rounded-full font-medium
                    <%= case deck.content_rating
                        when 'family' then 'text-green-400'
                        when 'adult' then 'text-yellow-400'
                        when 'nsfw' then 'text-red-400'
                        end %>"
                    style="background: <%= case deck.content_rating
                        when 'family' then 'rgba(34, 197, 94, 0.15)'
                        when 'adult' then 'rgba(250, 204, 21, 0.15)'
                        when 'nsfw' then 'rgba(239, 68, 68, 0.15)'
                        end %>;">
                <%= t("deck.content_rating.#{deck.content_rating}") %>
              </span>
              <span class="text-purple-400 font-bold text-sm">+<%= deck.votes_count %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @decks.empty? %>
      <div class="text-center py-16 rounded-2xl"
           style="background: rgba(10, 10, 15, 0.6); border: 1px dashed rgba(168, 85, 247, 0.3);">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center"
             style="background: rgba(168, 85, 247, 0.1);">
          <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <p class="text-white/50 text-lg mb-6">No se encontraron mazos</p>
        <%= link_to new_deck_path,
            class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-white transition-all duration-300 hover:scale-[1.02]",
            style: "background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <%= t('deck.create_new') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
