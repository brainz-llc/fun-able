<%= form_with model: deck, class: "space-y-6" do |f| %>
  <!-- Deck Name -->
  <div class="rounded-xl p-4" style="background: rgba(0, 0, 0, 0.2);">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(236, 72, 153, 0.1) 100%);">
        <svg class="w-4 h-4 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
      </div>
      <%= f.label :name, t('activerecord.attributes.deck.name'), class: "text-sm font-medium text-white" %>
    </div>
    <%= f.text_field :name,
        class: "w-full px-4 py-3.5 rounded-xl text-white placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-pink-500/40 transition-all",
        style: "background: rgba(10, 10, 15, 0.8); border: 1px solid rgba(236, 72, 153, 0.2);",
        required: true,
        minlength: 3,
        maxlength: 100,
        placeholder: "Nombre de tu mazo..." %>
  </div>

  <!-- Description -->
  <div class="rounded-xl p-4" style="background: rgba(0, 0, 0, 0.2);">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);">
        <svg class="w-4 h-4 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
      </div>
      <%= f.label :description, t('activerecord.attributes.deck.description'), class: "text-sm font-medium text-white" %>
    </div>
    <%= f.text_area :description,
        class: "w-full px-4 py-3.5 rounded-xl text-white placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-cyan-500/40 transition-all resize-none",
        style: "background: rgba(10, 10, 15, 0.8); border: 1px solid rgba(6, 182, 212, 0.2);",
        rows: 4,
        maxlength: 500,
        placeholder: "Describe tu mazo con estilo..." %>
  </div>

  <!-- Region & Content Rating Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Region -->
    <div class="rounded-xl p-4" style="background: rgba(0, 0, 0, 0.2);">
      <div class="flex items-center gap-3 mb-3">
        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(168, 85, 247, 0.1) 100%);">
          <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <%= f.label :region_id, t('region.select'), class: "text-sm font-medium text-white" %>
      </div>
      <%= f.collection_select :region_id, @regions, :id, :display_name,
          { include_blank: "Ninguna (Universal)" },
          class: "w-full px-4 py-3.5 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/40 transition-all cursor-pointer",
          style: "background: rgba(10, 10, 15, 0.8); border: 1px solid rgba(168, 85, 247, 0.2);" %>
    </div>

    <!-- Content Rating -->
    <div class="rounded-xl p-4" style="background: rgba(0, 0, 0, 0.2);">
      <div class="flex items-center gap-3 mb-3">
        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, rgba(250, 204, 21, 0.2) 0%, rgba(250, 204, 21, 0.1) 100%);">
          <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <%= f.label :content_rating, t('activerecord.attributes.deck.content_rating'), class: "text-sm font-medium text-white" %>
      </div>
      <%= f.select :content_rating,
          options_for_select([
            [t('deck.content_rating.family'), 'family'],
            [t('deck.content_rating.adult'), 'adult'],
            [t('deck.content_rating.nsfw'), 'nsfw']
          ], deck.content_rating),
          {},
          class: "w-full px-4 py-3.5 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-yellow-500/40 transition-all cursor-pointer",
          style: "background: rgba(10, 10, 15, 0.8); border: 1px solid rgba(250, 204, 21, 0.2);" %>

      <!-- Rating preview badges -->
      <div class="mt-3 flex flex-wrap gap-2">
        <span class="text-[10px] px-2 py-1 rounded-full text-green-400 opacity-60" style="background: rgba(34, 197, 94, 0.15);">Familiar</span>
        <span class="text-[10px] px-2 py-1 rounded-full text-yellow-400 opacity-60" style="background: rgba(250, 204, 21, 0.15);">Adulto</span>
        <span class="text-[10px] px-2 py-1 rounded-full text-red-400 opacity-60" style="background: rgba(239, 68, 68, 0.15);">NSFW</span>
      </div>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="flex gap-4 pt-4">
    <%= link_to t('actions.cancel'), decks_path,
        class: "flex-1 py-3.5 rounded-xl font-semibold text-center text-white/60 hover:text-white transition-all",
        style: "background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1);" %>
    <%= f.submit t('actions.save'),
        class: "flex-1 py-3.5 rounded-xl font-semibold text-white cursor-pointer transition-all duration-300 hover:scale-[1.02]",
        style: "background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);" %>
  </div>
<% end %>
