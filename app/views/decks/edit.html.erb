<div class="min-h-screen -mt-16 pt-16 relative overflow-hidden flex items-center justify-center px-4 py-12">
  <!-- Animated Background Gradients -->
  <div class="absolute inset-0 pointer-events-none" style="clip-path: inset(0);">
    <div class="absolute top-1/4 left-0 -translate-x-1/2 w-64 h-64 md:w-[500px] md:h-[500px] bg-pink-500/20 md:bg-pink-500/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-1/3 right-0 translate-x-1/2 w-80 h-80 md:w-[600px] md:h-[600px] bg-cyan-500/15 md:bg-cyan-500/12 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 -translate-x-1/2 w-48 h-48 md:w-[400px] md:h-[400px] bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 w-full max-w-2xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-2"><%= t('deck.edit') %></h1>
      <p class="text-white/40 text-sm md:text-base"><%= @deck.name %></p>
    </div>

    <!-- Form Card -->
    <div class="rounded-2xl p-6 md:p-8"
         style="background: linear-gradient(145deg, rgba(15, 15, 20, 0.95) 0%, rgba(10, 10, 15, 0.98) 100%);
                border: 1px solid rgba(168, 85, 247, 0.15);
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);">
      <%= render 'form', deck: @deck %>
    </div>

    <!-- Delete Section -->
    <div class="mt-6 p-5 rounded-2xl text-center"
         style="background: rgba(239, 68, 68, 0.05); border: 1px solid rgba(239, 68, 68, 0.2);">
      <p class="text-white/40 text-sm mb-4">Zona de peligro</p>
      <%= button_to deck_path(@deck),
          method: :delete,
          class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl font-medium text-red-400 transition-all duration-300 hover:bg-red-500/20",
          style: "border: 1px solid rgba(239, 68, 68, 0.3);",
          data: { turbo_confirm: "Eliminar este mazo permanentemente?" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <%= t('actions.delete') %>
      <% end %>
    </div>
  </div>
</div>
