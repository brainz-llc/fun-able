<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold"><%= t('nav.my_decks') %></h1>
    <%= link_to t('deck.create_new'), new_deck_path, class: "btn btn-primary" %>
  </div>

  <% if @decks.any? %>
    <div class="space-y-4">
      <% @decks.each do |deck| %>
        <div class="bg-bg-card rounded-lg p-4 flex items-center justify-between">
          <div>
            <div class="flex items-center gap-2 mb-1">
              <%= link_to deck.name, deck_path(deck), class: "font-bold text-lg hover:text-terracotta" %>
              <span class="text-xs px-2 py-0.5 rounded <%= deck.published? ? 'bg-success' : 'bg-gray-600' %>">
                <%= t("deck.status.#{deck.status}") %>
              </span>
              <span class="rating-<%= deck.content_rating %> px-2 py-0.5 rounded text-xs">
                <%= t("deck.content_rating.#{deck.content_rating}") %>
              </span>
            </div>
            <div class="text-sm text-text-muted">
              <%= deck.black_cards_count %> negras &middot; <%= deck.white_cards_count %> blancas
              &middot; +<%= deck.votes_count %> votos
            </div>
          </div>

          <div class="flex gap-2">
            <%= link_to "Cartas", deck_deck_cards_path(deck), class: "btn btn-secondary text-sm" %>
            <%= link_to t('deck.edit'), edit_deck_path(deck), class: "btn btn-ghost text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-bg-card rounded-xl">
      <p class="text-text-secondary text-lg mb-4">No has creado ningun mazo todavia</p>
      <%= link_to t('deck.create_new'), new_deck_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
